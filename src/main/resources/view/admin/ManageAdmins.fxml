<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" styleClass="root-pane" stylesheets="@/styles/admin/manageadmins.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.admin.AdminController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox styleClass="header-section" VBox.vgrow="NEVER">

            <HBox alignment="CENTER_LEFT" spacing="16">
                <FontAwesomeIconView glyphName="USERS" size="24" styleClass="page-icon" />
                <Label styleClass="page-title" text="Manage Admins" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="toolbar">

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="search-icon" />
                    <TextField fx:id="searchFld" promptText="Search by username, name..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Search" />
                        </HBox>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addButton" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Add Admin" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="refreshButton" styleClass="secondary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="refresh-icon" />
                            <Label styleClass="button-label" text="Refresh" />
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </VBox>

        <VBox styleClass="table-container" VBox.vgrow="ALWAYS">

            <TableView fx:id="adminTable" styleClass="admin-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" maxWidth="80" minWidth="80" text="ID" />
                    <TableColumn fx:id="usernameColumn" prefWidth="150" text="Username" />
                    <TableColumn fx:id="fNameColumn" prefWidth="150" text="First Name" />
                    <TableColumn fx:id="mNameColumn" prefWidth="150" text="Middle Name" />
                    <TableColumn fx:id="lNameColumn" prefWidth="150" text="Last Name" />
                    <TableColumn fx:id="regDateColumn" prefWidth="180" text="Registered Date" />
                    <TableColumn fx:id="actionsColumn" maxWidth="120" minWidth="120" text="Actions" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>
