<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root"
      prefHeight="600.0"
      prefWidth="800.0"
      spacing="0"
      styleClass="dialog-root"
      stylesheets="@/styles/admin/dialog/addadmindialog.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ionres.respondph.admin.dialogs_controller.AddAdminDialogController">

    <!-- ==================== HEADER SECTION ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="USER_PLUS" size="22" styleClass="header-icon" />

        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Add New Admin" />
            <Label styleClass="dialog-subtitle" text="Create a new admin account. Fields marked with * are required." />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeButton" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== ERROR CONTAINER ==================== -->
    <VBox alignment="CENTER" managed="false" styleClass="error-box" visible="false">
        <padding>
            <Insets bottom="12" left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>

    <!-- ==================== MAIN FORM CONTAINER ==================== -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: ACCOUNT CREDENTIALS ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="USER_SECRET" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Account Credentials" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 1 of 2" />
                </HBox>

                <!-- Username Field -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Username *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                        <TextField fx:id="usernameField"
                                   promptText="Enter unique username"
                                   styleClass="field-input"
                                   HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <!-- Password Fields Row -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Password -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Password *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="LOCK" size="14" styleClass="field-icon" />
                            <PasswordField fx:id="passwordField"
                                           promptText="Enter password"
                                           styleClass="field-input"
                                           HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Confirm Password -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Confirm Password *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="LOCK" size="14" styleClass="field-icon" />
                            <PasswordField fx:id="confirmPasswordField"
                                           promptText="Re-enter password"
                                           styleClass="field-input"
                                           HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </GridPane>

                <!-- Password Requirements -->
                <VBox spacing="6" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="14" styleClass="info-icon" />
                        <Label styleClass="info-title" text="Password Requirements" />
                    </HBox>
                    <Label styleClass="info-text" text="• Minimum 8 characters" />
                    <Label styleClass="info-text" text="• At least one uppercase letter, one lowercase letter, and one number" />
                    <Label styleClass="info-text" text="• Passwords must match" />
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: PERSONAL INFORMATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="ID_CARD" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Personal Information" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 2 of 2" />
                </HBox>

                <!-- Name Fields Row -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="40" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30" />
                    </columnConstraints>

                    <!-- First Name -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="First Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <TextField fx:id="firstNameField"
                                       promptText="Enter first name"
                                       styleClass="field-input"
                                       HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Middle Name -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Middle Name" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <TextField fx:id="middleNameField"
                                       promptText="Middle name"
                                       styleClass="field-input"
                                       HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Last Name -->
                    <VBox spacing="8" GridPane.columnIndex="2">
                        <Label styleClass="field-label" text="Last Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <TextField fx:id="lastNameField"
                                       promptText="Last name"
                                       styleClass="field-input"
                                       HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </GridPane>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="saveButton" prefHeight="42.0" prefWidth="160.0" styleClass="btn-primary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Create Admin" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
