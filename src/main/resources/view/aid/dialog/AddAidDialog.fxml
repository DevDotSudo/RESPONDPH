<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="750.0" spacing="0" styleClass="dialog-root" stylesheets="@/styles/aid/dialog/addaiddialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.AddAidController">

    <!-- ==================== HEADER SECTION ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Distribute Aid" />
            <Label styleClass="dialog-subtitle" text="Fields marked with * are required. Record a new aid distribution." />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== ERROR CONTAINER ==================== -->
    <VBox alignment="CENTER" managed="false" styleClass="error-box" visible="false">
        <padding>
            <Insets bottom="12" left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>

    <!-- ==================== INFO BANNER ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-banner">
        <padding>
            <Insets bottom="12" left="24" right="24" top="12" />
        </padding>
        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="16" styleClass="banner-icon" />
        <Label fx:id="infoLabel" styleClass="banner-text" text="Select aid type and disaster to begin distribution" />
    </HBox>

    <!-- ==================== MAIN FORM CONTAINER ==================== -->
    <ScrollPane fitToWidth="true" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: DISTRIBUTION CONTEXT ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Distribution Context" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 1 of 4" />
                </HBox>

                <!-- Aid Type and Disaster Fields -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                    </columnConstraints>

                    <!-- Aid Type -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Aid Type *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="HEARTBEAT" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="aidTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Select aid type" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Choose the type of aid to distribute" />
                    </VBox>

                    <!-- Disaster Event -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Disaster Event *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="FIRE" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="disasterComboBox" maxWidth="1.7976931348623157E308" promptText="Select disaster event" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Select the disaster event for distribution" />
                    </VBox>

                    <!-- General Aid Toggle (as a field) -->
                    <VBox spacing="8" GridPane.columnIndex="2">
                        <Label styleClass="field-label" text="Distribution Mode" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="INFO_CIRCLE" size="14" styleClass="field-icon" />
                            <CheckBox fx:id="generalAidCheckbox" styleClass="field-checkbox" text="General Aid (No Disaster)" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- Distribution Mode Info Box -->
                <VBox spacing="12" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="16" styleClass="info-icon" />
                        <Label styleClass="info-title" text="About Distribution Modes" />
                    </HBox>
                    <Label styleClass="info-text" text="• Disaster-specific: Aid tied to a specific disaster event, targeting affected beneficiaries.&#10;• General aid: Ongoing distribution not tied to disasters, based on general vulnerability scores." wrapText="true" />
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: BARANGAY FILTER ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Location Filter" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 2 of 4" />
                </HBox>

                <!-- Barangay Filter Checkbox -->
                <VBox spacing="12">
                    <HBox alignment="CENTER_LEFT" prefHeight="44" spacing="10" styleClass="flat-input">
                        <padding>
                            <Insets left="14" right="14" />
                        </padding>
                        <FontAwesomeIconView glyphName="FILTER" size="14" styleClass="field-icon" />
                        <CheckBox fx:id="useBarangayFilterCheckbox" styleClass="field-checkbox" text="Filter by Barangay" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <VBox fx:id="barangaySelectionContainer" spacing="14" styleClass="subsection-container">
                        <padding>
                            <Insets left="10" top="10" />
                        </padding>

                        <!-- Barangay Mode Selection -->
                        <GridPane hgap="16" vgap="14">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            </columnConstraints>

                            <VBox spacing="10" GridPane.columnIndex="0">
                                <RadioButton fx:id="allBarangaysRadio" selected="true" styleClass="radio-label" text="All Barangays (No Filter)" />
                                <RadioButton fx:id="singleBarangayRadio" styleClass="radio-label" text="Single Barangay" />
                            </VBox>

                            <VBox fx:id="singleBarangayContainer" spacing="8" GridPane.columnIndex="1">
                                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                                    <FontAwesomeIconView glyphName="MAP_MARKER" size="14" styleClass="field-icon" />
                                    <ComboBox fx:id="barangayComboBox" maxWidth="1.7976931348623157E308" promptText="Select Barangay" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                                </HBox>
                            </VBox>
                     <rowConstraints>
                        <RowConstraints />
                     </rowConstraints>
                        </GridPane>
                    </VBox>
                </VBox>

                <!-- Selection Summary -->
                <HBox fx:id="selectionSummaryBox" managed="false" spacing="12" styleClass="success-box" visible="false">
                    <padding>
                        <Insets bottom="12" left="16" right="16" top="12" />
                    </padding>
                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="20" styleClass="success-icon" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="success-title" text="Distribution Configuration Ready" />
                        <Label fx:id="selectionSummaryLabel" styleClass="success-text" wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 3: AID INFORMATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="CUBES" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Aid Information" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 3 of 4" />
                </HBox>

                <!-- Aid Fields -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                    </columnConstraints>

                    <!-- Aid Name -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Aid Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="TAG" size="14" styleClass="field-icon" />
                            <TextField fx:id="nameFld" maxWidth="1.7976931348623157E308" promptText="e.g., Food Pack, Medical Supplies" styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Provider -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Provider *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="TRUCK" size="14" styleClass="field-icon" />
                            <TextField fx:id="providerFld" maxWidth="1.7976931348623157E308" promptText="e.g., Red Cross, DSWD" styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Cost Per Unit -->
                    <VBox spacing="8" GridPane.columnIndex="2">
                        <Label styleClass="field-label" text="Cost Per Unit *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="MONEY" size="14" styleClass="field-icon" />
                            <TextField fx:id="costFld" maxWidth="1.7976931348623157E308" promptText="₱ 0.00" styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Philippine Pesos (₱)" />
                    </VBox>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- Quantity Row -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Available Quantity -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Available Quantity *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="CUBES" size="14" styleClass="field-icon" />
                            <TextField fx:id="quantityFld" maxWidth="1.7976931348623157E308" promptText="Total units available" styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Total units to distribute" />
                    </VBox>

                    <!-- Quantity Per Beneficiary -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Quantity Per Beneficiary *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <TextField fx:id="quantityPerBeneficiaryFld" maxWidth="1.7976931348623157E308" promptText="Units per person" styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="How many units each beneficiary receives" />
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 4: DISTRIBUTION METHOD ==================== -->
            <!-- ==================== SECTION 4: DISTRIBUTION METHOD ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="SITEMAP" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Distribution Method" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 4 of 4" />
                </HBox>

                <!-- ── ALGORITHM RADIO BUTTONS ── -->
                <VBox spacing="12">

                    <!-- K-Means Radio -->
                    <HBox alignment="CENTER_LEFT" prefHeight="44" spacing="10" styleClass="flat-input">
                        <padding>
                            <Insets left="14" right="14" />
                        </padding>
                        <FontAwesomeIconView glyphName="CLUSTER" size="14" styleClass="field-icon" />
                        <RadioButton fx:id="useKMeansRadio" selected="true" styleClass="field-checkbox"
                                     text="K-Means Clustering Algorithm (3 Clusters)"
                                     HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="badge-recommended">RECOMMENDED</Label>
                    </HBox>

                    <!-- FCM Radio -->
                    <HBox alignment="CENTER_LEFT" prefHeight="44" spacing="10" styleClass="flat-input">
                        <padding>
                            <Insets left="14" right="14" />
                        </padding>
                        <FontAwesomeIconView glyphName="SHARE_ALT" size="14" styleClass="field-icon" />
                        <RadioButton fx:id="useFCMRadio" styleClass="field-checkbox"
                                     text="Fuzzy C-Means (FCM) Clustering Algorithm (3 Clusters)"
                                     HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="badge-new">NEW</Label>
                    </HBox>

                </VBox>

                <!-- K-Means Info Box (shown when K-Means is selected) -->
                <VBox fx:id="kmeansInfoBox" spacing="12" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="16" styleClass="info-icon" />
                        <Label styleClass="info-title" text="How 3-Cluster K-Means Works" />
                    </HBox>
                    <Label styleClass="info-text" text="• Groups beneficiaries into 3 clusters based on vulnerability scores (0.0 to 1.0)&#10;• Distributes aid starting from highest priority cluster first&#10;• Ensures balanced distribution across different need levels&#10;• Works seamlessly with barangay filtering" wrapText="true" />
                </VBox>

                <!-- FCM Info Box (shown when FCM is selected) -->
                <VBox fx:id="fcmInfoBox" managed="false" spacing="12" styleClass="info-box" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="16" styleClass="info-icon" />
                        <Label styleClass="info-title" text="How 3-Cluster Fuzzy C-Means Works" />
                    </HBox>
                    <Label styleClass="info-text" text="• Assigns each beneficiary a MEMBERSHIP DEGREE (0–1) in every cluster (soft assignment)&#10;• Uses fuzziness exponent m=2 to control how gradual cluster boundaries are&#10;• Iterates until the membership matrix converges (change &lt; 0.00001)&#10;• Beneficiary is assigned to the cluster with their highest membership value&#10;• Priority is then determined by the cluster's average vulnerability score&#10;• More nuanced than K-Means for borderline beneficiaries" wrapText="true" />
                </VBox>

                <!-- Simple Distribution Warning (shown when neither algorithm is selected – future use) -->
                <HBox fx:id="simpleDistributionWarning" managed="false" spacing="12" styleClass="warning-box" visible="false">
                    <padding>
                        <Insets bottom="12" left="16" right="16" top="12" />
                    </padding>
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="warning-icon" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="warning-title" text="Simple Score-Based Distribution" />
                        <Label styleClass="warning-text" text="Aid will be distributed to the top N beneficiaries by score only, without clustering." wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="previewBtn" prefHeight="42.0" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="EYE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Preview Distribution" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="printCustomBtn" prefHeight="42.0" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="PRINT" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Print Custom" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="cancelBtn" prefHeight="42.0" styleClass="btn-secondary-alt">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Cancel" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="saveAidBtn" prefHeight="42.0" prefWidth="180.0" styleClass="btn-primary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="PAPER_PLANE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Distribute Aid" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
