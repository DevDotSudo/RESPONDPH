<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="addAidRoot" prefHeight="800" prefWidth="1000" spacing="0" styleClass="dialog-root" stylesheets="@/styles/aid/dialog/addaiddialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.AddAidController">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Distribute Aid" />
            <Label styleClass="dialog-subtitle" text="Fields marked with * are required. Configure aid distribution for disaster-affected beneficiaries." />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Form Container -->
    <ScrollPane fitToWidth="true" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: DISTRIBUTION CONTEXT ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Distribution Context" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 1 of 4" />
                </HBox>

                <!-- Info Box -->
                <VBox spacing="6" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="14" styleClass="info-icon" />
                        <Label styleClass="info-title" text="Distribution Setup" />
                    </HBox>
                    <Label styleClass="info-text" text="• Select aid type and disaster event to begin distribution" />
                    <Label styleClass="info-text" text="• Use barangay filtering to target specific areas" />
                    <Label styleClass="info-text" text="• Configure distribution parameters carefully" />
                </VBox>

                <!-- Distribution Context Fields -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Aid Type Selection -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Aid Type *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="HEARTBEAT" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="aidTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Select Aid Type" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Choose the type of aid you want to distribute" />
                    </VBox>

                    <!-- Disaster Selection -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Disaster Event *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="FIRE" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="disasterComboBox" maxWidth="1.7976931348623157E308" promptText="Select Disaster Event" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Select the disaster event for which you're distributing aid" />
                    </VBox>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- Barangay Filter Section -->
                <VBox spacing="12">
                    <CheckBox fx:id="useBarangayFilterCheckbox" styleClass="checkbox"
                              text="Filter by Barangay" />

                    <VBox fx:id="barangaySelectionContainer" spacing="12" styleClass="subsection-container">
                        <padding>
                            <Insets bottom="12" left="16" right="16" top="12" />
                        </padding>

                        <!-- Distribution Scope -->
                        <VBox spacing="8">
                            <Label styleClass="field-label" text="Distribution Scope" />

                            <RadioButton fx:id="allBarangaysRadio" styleClass="radio-button"
                                         text="All Barangays (No Filter)" />

                            <RadioButton fx:id="singleBarangayRadio" styleClass="radio-button"
                                         text="Single Barangay" />

                            <!-- Single Barangay Container -->
                            <VBox fx:id="singleBarangayContainer" spacing="8" managed="false" visible="false">
                                <padding>
                                    <Insets left="24" />
                                </padding>
                                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                                    <FontAwesomeIconView glyphName="MAP_MARKER" size="14" styleClass="field-icon" />
                                    <ComboBox fx:id="barangayComboBox" maxWidth="1.7976931348623157E308"
                                              promptText="Select Barangay" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Selection Summary -->
                <HBox fx:id="selectionSummaryBox" managed="false" spacing="12" styleClass="success-box" visible="false">
                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="20" styleClass="success-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="success-title" text="Distribution Configuration Ready" />
                        <Label fx:id="selectionSummaryLabel" styleClass="success-text" wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: AID INFORMATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Aid Information" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 2 of 4" />
                </HBox>

                <!-- Aid Name -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Aid Name *" />
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="TAG" size="14" styleClass="field-icon" />
                        <TextField fx:id="nameFld" promptText="e.g., Food Pack, Medical Supplies"
                                   styleClass="field-input" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <!-- Quantity Row -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Available Quantity -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Available Quantity *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="CUBES" size="14" styleClass="field-icon" />
                            <TextField fx:id="quantityFld" promptText="Total units (e.g., 100)"
                                       styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Total units available to distribute" />
                    </VBox>

                    <!-- Quantity Per Beneficiary -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Quantity Per Beneficiary *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <TextField fx:id="quantityPerBeneficiaryFld" promptText="Units per person (e.g., 2)"
                                       styleClass="field-input" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="How many units each beneficiary receives" />
                    </VBox>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- Cost Per Unit -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Cost Per Unit *" />
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="MONEY" size="14" styleClass="field-icon" />
                        <TextField fx:id="costFld" promptText="Cost per unit (e.g., 500.00)"
                                   styleClass="field-input" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <Label styleClass="field-helper-text" text="Enter cost in Philippine Pesos (₱)" />
                </VBox>

                <!-- Provider -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Provider *" />
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="TRUCK" size="14" styleClass="field-icon" />
                        <TextField fx:id="providerFld" promptText="e.g., Red Cross, DSWD, LGU"
                                   styleClass="field-input" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 3: DISTRIBUTION METHOD ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="SITEMAP" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Distribution Method" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 3 of 4" />
                </HBox>

                <!-- K-means Toggle -->
                <VBox spacing="12">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <CheckBox fx:id="useKMeansCheckbox" selected="true" styleClass="checkbox"
                                  text="Use K-Means Clustering Algorithm (3 Clusters)" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="badge-recommended">RECOMMENDED</Label>
                    </HBox>

                    <Label styleClass="field-helper-text" wrapText="true"
                           text="K-means ensures fair distribution across 3 vulnerability levels by grouping beneficiaries based on their scores and prioritizing those with highest needs." />
                </VBox>

                <!-- Cluster Settings -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Distribution Clusters" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="SITEMAP" size="14" styleClass="field-icon" />
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label styleClass="cluster-label" text="3 Clusters:" />
                            <Label styleClass="cluster-badge-low" text="Low" />
                            <Label styleClass="cluster-badge-medium" text="Medium" />
                            <Label styleClass="cluster-badge-high" text="High" />
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="badge-fixed" text="FIXED" />
                    </HBox>
                    <Label styleClass="field-helper-text" wrapText="true"
                           text="System uses 3 clusters: Low Priority (0.00-0.33), Medium Priority (0.34-0.66), High Priority (0.67-1.00)" />
                </VBox>

                <!-- Distribution Info Box -->
                <HBox spacing="12" styleClass="info-box">
                    <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="20" styleClass="info-box-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="info-box-title" text="How 3-Cluster K-Means Works:" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Groups beneficiaries into 3 clusters based on vulnerability scores (0.0 to 1.0)" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Distributes aid starting from High Priority cluster first" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Ensures balanced distribution across different need levels" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Works seamlessly with barangay filtering" />
                    </VBox>
                </HBox>

                <!-- Simple Distribution Warning -->
                <HBox fx:id="simpleDistributionWarning" managed="false" spacing="12"
                      styleClass="warning-box" visible="false">
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="warning-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="warning-title" text="Simple Score-Based Distribution" />
                        <Label styleClass="warning-text" wrapText="true"
                               text="Aid will be distributed to the top N beneficiaries by score only, without clustering." />
                    </VBox>
                </HBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="previewBtn" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="EYE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Preview Distribution" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="cancelBtn" onAction="#handleClose" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Cancel" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="saveAidBtn" styleClass="btn-primary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="PAPER_PLANE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Distribute Aid" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>