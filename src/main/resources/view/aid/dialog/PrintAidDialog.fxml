<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="-Infinity" prefHeight="750.0" prefWidth="500" spacing="20" styleClass="dialog-container" stylesheets="@/styles/aid/dialog/printDialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.PrintAidDialogController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <FontAwesomeIconView glyphName="PRINT" size="28" styleClass="dialog-icon" text="" />
        <VBox>
            <Label styleClass="dialog-title" text="Print Aid Distribution Report">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
            </Label>
            <Label styleClass="dialog-subtitle" text="Select aid type, disaster (or general aid), and optionally filter by barangay">
                <font>
                    <Font size="12" />
                </font>
            </Label>
        </VBox>
    </HBox>

    <Separator />

    <!-- Form -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">

        <!-- Aid Name Selection -->
        <VBox spacing="8">
            <Label styleClass="form-label" text="Select Aid Name: *">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
            <ComboBox fx:id="aidNameComboBox" maxWidth="Infinity"
                      promptText="Choose aid name" styleClass="custom-combo-box" />
        </VBox>

        <!-- Disaster Selection -->
        <VBox spacing="8">
            <Label styleClass="form-label" text="Select Disaster:">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
            <ComboBox fx:id="disasterComboBox" maxWidth="Infinity" promptText="Choose a disaster" styleClass="custom-combo-box" />
        </VBox>

        <!-- ========== GENERAL AID OPTION - NEW SECTION ========== -->
        <VBox spacing="10" style="-fx-background-color: #fff3cd; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #ffc107; -fx-border-radius: 5;">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <FontAwesomeIconView glyphName="INFO_CIRCLE" size="14" style="-fx-fill: #856404;" />
                <Label style="-fx-font-weight: bold; -fx-font-size: 11px; -fx-text-fill: #856404;" text="Distribution Mode" />
            </HBox>

            <CheckBox fx:id="generalAidCheckBox" text="âœ“ General Aid Distribution (No Specific Disaster)">
                <font>
                    <Font size="11" />
                </font>
            </CheckBox>

            <Label style="-fx-font-size: 10px; -fx-text-fill: #856404; -fx-font-style: italic;" text="Check this to print general aid distribution not tied to a specific disaster event." wrapText="true" />
        </VBox>
        <!-- ========== END OF GENERAL AID OPTION ========== -->

        <!-- Barangay Filter Section -->
        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <FontAwesomeIconView glyphName="MAP_MARKER" size="16" style="-fx-fill: #3498db;" />
                <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Barangay Filter (Optional)" />
            </HBox>

            <CheckBox fx:id="useBarangayFilterCheckBox" text="Filter by specific barangay">
                <font>
                    <Font size="11" />
                </font>
            </CheckBox>

            <VBox spacing="6">
                <Label style="-fx-font-size: 11px; -fx-text-fill: #6c757d;" text="Barangay:" />
                <ComboBox fx:id="barangayComboBox" maxWidth="Infinity" promptText="Select Barangay" styleClass="custom-combo-box" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #6c757d; -fx-font-style: italic;" text="Leave unchecked to print all barangays" wrapText="true" />
            </VBox>
        </VBox>

        <!-- Info Panel -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-panel">
            <FontAwesomeIconView glyphName="INFO_CIRCLE" size="20" styleClass="info-icon" />
            <VBox spacing="5">
                <Label fx:id="beneficiaryCountLabel" styleClass="info-text" text="Beneficiaries: 0">
                    <font>
                        <Font name="System Bold" size="13" />
                    </font>
                </Label>
                <Label styleClass="info-subtext" text="Sorted by K-Means priority score (high to low)">
                    <font>
                        <Font size="11" />
                    </font>
                </Label>
                <Label styleClass="info-subtext" text="Will print on bond paper (Letter size)">
                    <font>
                        <Font size="10" />
                    </font>
                </Label>
            </VBox>
        </HBox>

    </VBox>

    <!-- Buttons -->
    <Separator />

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="previewButton" disable="true" styleClass="secondary-button" text="Preview">
            <graphic>
                <HBox alignment="CENTER" spacing="6">
                    <FontAwesomeIconView glyphName="EYE" size="12" />
                    <Label text="Preview" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="printButton" disable="true" styleClass="primary-button">
            <graphic>
                <HBox alignment="CENTER" spacing="6">
                    <FontAwesomeIconView glyphName="PRINT" size="12" />
                    <Label text="Print" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="cancelButton" styleClass="secondary-button">
            <graphic>
                <HBox alignment="CENTER" spacing="6">
                    <FontAwesomeIconView glyphName="TIMES" size="12" />
                    <Label text="Cancel" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>