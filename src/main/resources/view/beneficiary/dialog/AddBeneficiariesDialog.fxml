                                <FontAwesomeIconView glyphName="MAP_MARKER" size="14" styleClass="field-icon" />
                                <TextField fx:id="latitudeFld" promptText="e.g., 10.3157" styleClass="field-input" HBox.hgrow="ALWAYS" />
                            </HBox>
