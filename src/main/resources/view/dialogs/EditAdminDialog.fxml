<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="476.0" prefWidth="654.0" spacing="20" styleClass="dialog-container" stylesheets="@/styles/dialogs/editadmindialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.admin.dialogs_controller.EditAdminDialogController">



    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="dialog-title" text="Edit Admin" />

    <GridPane hgap="15" prefHeight="267.0" prefWidth="594.0" styleClass="form-grid" vgap="15">

        <Label styleClass="field-label" text="Username *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="usernameField" promptText="Enter username" styleClass="input-field" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />

        <Label styleClass="field-label" text="First Name *" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="firstNameField" promptText="Enter first name" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="3" />

        <Label styleClass="field-label" text="Middle Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="middleNameField" promptText="Enter middle name" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label styleClass="field-label" text="Last Name *" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="lastNameField" promptText="Enter last name" styleClass="input-field" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />


        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <Label fx:id="errorLabel" managed="false" maxWidth="Infinity" styleClass="error-label" visible="false" wrapText="true" />


    <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="button-container">
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>

        <Button fx:id="cancelButton" prefWidth="120" styleClass="cancel-button" text="Cancel" />
        <Button fx:id="updateButton" prefHeight="40.0" prefWidth="151.0" styleClass="save-button" text="Update Admin" />
    </HBox>

</VBox>
