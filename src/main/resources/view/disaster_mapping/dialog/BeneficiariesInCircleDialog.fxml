<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="800.0" prefWidth="900.0" spacing="0" styleClass="dialog-root" stylesheets="@/styles/disaster_mapping/dialog/beneficiariesincircledialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster_mapping.dialogs_controller.BeneficiariesInCircleDialogController">

    <!-- ==================== HEADER ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="USERS" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label fx:id="titleLabel" styleClass="dialog-title" text="Beneficiaries in Disaster Area" />
            <Label styleClass="dialog-subtitle" text="Review affected beneficiaries and trigger evacuation assistance." />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Label fx:id="countChip" styleClass="chip" text="Total: 0" />
        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== BODY ==================== -->
    <VBox spacing="18" styleClass="dialog-body" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <!-- Info + Action Row -->
        <HBox alignment="CENTER_LEFT" spacing="14">
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-box" HBox.hgrow="ALWAYS">
                <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="info-icon" />
                <Label fx:id="infoLabel" styleClass="info-text" text="Disaster: " wrapText="true" />
            </HBox>

            <Button fx:id="evacuateBtn" styleClass="btn-primary">
                <graphic>
                    <HBox alignment="CENTER" spacing="10">
                        <FontAwesomeIconView glyphName="BOLT" size="16" styleClass="btn-icon" />
                        <Label styleClass="btn-text" text="Evacuate Now" />
                    </HBox>
                </graphic>
            </Button>
        </HBox>

        <!-- Table Card -->
        <VBox spacing="12" styleClass="form-section" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                <FontAwesomeIconView glyphName="LIST" size="18" styleClass="section-icon" />
                <Label styleClass="section-title" text="Beneficiaries List" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <TableView fx:id="beneficiariesTable" styleClass="beneficiaries-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" maxWidth="90" minWidth="90" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="1" text="Name" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</VBox>
