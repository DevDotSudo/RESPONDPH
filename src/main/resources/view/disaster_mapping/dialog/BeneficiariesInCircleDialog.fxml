<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="800.0" prefWidth="600.0" styleClass="dialog-container" stylesheets="@/styles/disaster_mapping/dialog/beneficiariesincircledialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster_mapping.dialogs_controller.BeneficiariesInCircleDialogController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="dialog-header">
        <FontAwesomeIconView glyphName="USERS" size="24" styleClass="header-icon" />
        <Label fx:id="titleLabel" styleClass="dialog-title" text="Beneficiaries in Disaster Area" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="closeBtn" styleClass="close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox spacing="16" styleClass="content-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="24" left="24" right="24" top="24" />
        </padding>
        <HBox spacing="20.0">
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-box" HBox.hgrow="ALWAYS">
                <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="info-icon"/>
                <Label fx:id="infoLabel" styleClass="info-label" text="Disaster: "/>
            </HBox>
            <Button fx:id="designatedSiteBtn" styleClass="primary-button" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER" spacing="8">
                        <Label styleClass="button-label" text="Designated Site" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </graphic>
            </Button>
            <Button fx:id="evacuateBtn" styleClass="primary-button" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER" spacing="8">
                        <Label styleClass="button-label" text="Evacuate Now" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>

        <VBox spacing="8" styleClass="table-section" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <FontAwesomeIconView glyphName="LIST" size="16" styleClass="section-icon" />
                <Label styleClass="section-label" text="Beneficiaries List" />
            </HBox>

            <ScrollPane fitToWidth="true" styleClass="table-scroll-pane" VBox.vgrow="ALWAYS">
                <TableView fx:id="beneficiariesTable" styleClass="beneficiaries-table">
                    <columns>
                        <TableColumn fx:id="idColumn" maxWidth="80" minWidth="80" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="1" text="Name" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </ScrollPane>
        </VBox>
    </VBox>

</VBox>
