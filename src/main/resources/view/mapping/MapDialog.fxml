<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mappingDialogRoot" prefHeight="800.0" prefWidth="1200.0" styleClass="map-dialog-container" stylesheets="@/styles/mapping/mappingdialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.common.controller.MappingDialogController">
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="map-dialog-header">
        <FontAwesomeIconView glyphName="MAP_MARKER" size="24" styleClass="map-header-icon" />
        <Label fx:id="mapDialogTitle" styleClass="map-dialog-title" text="Select Location" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="mapCloseButton" styleClass="map-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="map-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <Pane fx:id="mapContainer" styleClass="map-container" VBox.vgrow="ALWAYS" />

    <VBox alignment="CENTER" styleClass="map-error-container">
        <Label fx:id="mapErrorLabel" managed="false" styleClass="map-error-label" visible="false" />
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="map-button-container">
        <padding>
            <Insets bottom="24" left="32" right="32" top="16" />
        </padding>
        <Button fx:id="mapOkButton" styleClass="map-primary-button">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="CHECK" size="16" styleClass="map-button-icon" />
                    <Label styleClass="map-button-label" text="OK" />
                </HBox>
            </graphic>
        </Button>
    </HBox>
</VBox>
