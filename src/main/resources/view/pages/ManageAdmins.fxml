<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="655.0" prefWidth="939.0" styleClass="root-pane" stylesheets="@/styles/pages/manageadmins.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.admin.AdminController">

    <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox prefHeight="122.0" prefWidth="912.0" styleClass="header-section">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <Label styleClass="page-title" text="Manage Admins" />

            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="toolbar">
                <VBox.margin>
                    <Insets top="20" />
                </VBox.margin>

                <TextField fx:id="searchFld" prefHeight="42.0" prefWidth="304.0" promptText="Search admins..." styleClass="search-field" />
                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch" styleClass="search-button" stylesheets="@../../styles/pages/manageadmins.css" text="Search" />
                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addButton" styleClass="add-button" text="+ Add Admin" />
                <Button fx:id="refreshButton" styleClass="refresh-button" text="âŸ³ Refresh" />
            </HBox>
        </VBox>

        <VBox prefHeight="398.0" prefWidth="900.0" styleClass="table-container" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </padding>

            <TableView fx:id="adminTable" prefHeight="436.0" prefWidth="823.0" styleClass="admin-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="1" text="ID" styleClass="content"/>
                    <TableColumn fx:id="usernameColumn" prefWidth="1" text="Username" styleClass="content"/>
                    <TableColumn fx:id="fNameColumn" prefWidth="1" text="First Name" styleClass="content"/>
                    <TableColumn fx:id="mNameColumn" prefWidth="1" text="Middle Name" styleClass="content"/>
                    <TableColumn fx:id="lNameColumn"  prefWidth="1" text="Last Name" styleClass="content"/>
                    <TableColumn fx:id="regDateColumn" prefWidth="1" text="Registered Date" styleClass="content"/>
                    <TableColumn fx:id="actionsColumn" maxWidth="160" text="Actions" styleClass="content"/>
                </columns>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>
