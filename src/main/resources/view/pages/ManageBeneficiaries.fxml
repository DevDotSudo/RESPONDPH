<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" styleClass="root-pane" stylesheets="@/styles/pages/managebeneficiaries.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.beneficiary.BeneficiaryController">

    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox styleClass="header-section">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <FontAwesomeIconView glyphName="USER_MD" size="36" styleClass="page-icon" />
                <Label styleClass="page-title" text="Manage Beneficiaries" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="toolbar">
                <VBox.margin>
                    <Insets top="20" />
                </VBox.margin>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="16" styleClass="search-icon" />
                    <TextField fx:id="searchField" promptText="Search by name, contact, address..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch" styleClass="search-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Search" />
                        </HBox>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addButton" onAction="#handleAddBeneficiary" styleClass="add-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="16" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Add Beneficiary" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="refresh-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="REFRESH" size="16" styleClass="refresh-icon" />
                            <Label styleClass="button-label" text="Refresh" />
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </padding>

            <TableView fx:id="beneficiaryTable" styleClass="beneficiary-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="70"  text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="180"  text="Full Name" />
                    <TableColumn fx:id="ageColumn" prefWidth="70" text="Age" />
                    <TableColumn fx:id="contactColumn" prefWidth="140"  text="Contact" />
                    <TableColumn fx:id="addressColumn" prefWidth="200"  text="Address" />
                    <TableColumn fx:id="statusColumn" prefWidth="120" text="Status" />
                    <TableColumn fx:id="registeredDateColumn" prefWidth="150"  text="Registered" />
                    <TableColumn fx:id="actionsColumn" minWidth="120" maxWidth="120" text="Actions" />
                </columns>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>
