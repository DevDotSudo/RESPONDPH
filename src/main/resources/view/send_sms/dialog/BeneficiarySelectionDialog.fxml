<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/styles/send_sms/sendsms.css"
      fx:controller="com.ionres.respondph.sendsms.dialogs_controller.BeneficiarySelectionDialogController"
      spacing="15"
      prefWidth="700"
      prefHeight="600"
      styleClass="dialog-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Select Beneficiaries" styleClass="dialog-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblSelectedCount"
               text="Selected: 0"
               styleClass="selection-count-label"/>
    </HBox>

    <Separator/>

    <!-- Search Box -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search:" styleClass="input-label"/>
        <TextField fx:id="txtSearch"
                   promptText="Search by name, barangay, or phone..."
                   HBox.hgrow="ALWAYS"
                   styleClass="search-field"/>
        <Button text="Clear Search"
                onAction="#onClearSearch"
                styleClass="secondary-button"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Select All"
                onAction="#onSelectAll"
                styleClass="secondary-button"/>
        <Button text="Deselect All"
                onAction="#onDeselectAll"
                styleClass="secondary-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblTotalCount"
               text="Total: 0"
               styleClass="total-count-label"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblBeneficiaries"
               VBox.vgrow="ALWAYS"
               styleClass="beneficiary-table">
        <columns>
            <TableColumn fx:id="colCheckbox"
                         text=""
                         prefWidth="50"
                         sortable="false"/>
            <TableColumn fx:id="colName"
                         text="Full Name"
                         prefWidth="200"/>
            <TableColumn fx:id="colBarangay"
                         text="Barangay"
                         prefWidth="150"/>
            <TableColumn fx:id="colPhone"
                         text="Mobile Number"
                         prefWidth="150"/>
            <TableColumn fx:id="colAddress"
                         text="Coordinates"
                         prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancel"
                text="Cancel"
                onAction="#onCancel"
                styleClass="secondary-button"
                prefWidth="100"/>
        <Button fx:id="btnOk"
                text="OK"
                onAction="#onOk"
                styleClass="primary-button"
                prefWidth="100"/>
    </HBox>
</VBox>