<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="dashboard-root" stylesheets="@/styles/dashboard/dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.dashboard.DashboardController">

    <VBox spacing="18.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" styleClass="dashboard-header">
            <Label styleClass="page-title" text="Dashboard" />
        </HBox>

        <GridPane hgap="20.0" vgap="20.0" VBox.vgrow="NEVER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <StackPane styleClass="beneficiary-card" GridPane.columnIndex="0">
                <VBox alignment="CENTER_LEFT" spacing="12.0" styleClass="card-container">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="beneficiary-icon">
                            <FontAwesomeIconView glyphName="USERS" styleClass="card-icon" />
                        </StackPane>
                        <VBox spacing="2">
                            <Label styleClass="card-title" text="Total Beneficiary" />
                            <Label fx:id="totalBeneficiaryLabel" styleClass="card-value" text="0" />
                        </VBox>
                    </HBox>
                </VBox>
            </StackPane>

            <StackPane styleClass="disasters-card" GridPane.columnIndex="1">
                <VBox alignment="CENTER_LEFT" spacing="12.0" styleClass="card-container">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="disasters-icon">
                            <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" styleClass="card-icon" />
                        </StackPane>
                        <VBox spacing="2">
                            <Label styleClass="card-title" text="Total Disasters" />
                            <Label fx:id="totalDisastersLabel" styleClass="card-value" text="0" />
                        </VBox>
                    </HBox>
                </VBox>
            </StackPane>

            <StackPane styleClass="aids-card" GridPane.columnIndex="2">
                <VBox alignment="CENTER_LEFT" spacing="12.0" styleClass="card-container">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <StackPane styleClass="aids-icon">
                            <FontAwesomeIconView glyphName="MEDKIT" styleClass="card-icon" />
                        </StackPane>
                        <VBox spacing="2">
                            <Label styleClass="card-title" text="Total Aids" />
                            <Label fx:id="totalAidsLabel" styleClass="card-value" text="0" />
                        </VBox>
                    </HBox>
                </VBox>
            </StackPane>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <Label styleClass="section-title" text="Disaster Mapping" />

        <StackPane VBox.vgrow="ALWAYS">

            <Pane fx:id="mapContainer" styleClass="map-container" />

            <VBox alignment="TOP_RIGHT" fillWidth="false" maxWidth="-Infinity" pickOnBounds="false" spacing="6" styleClass="map-status-wrapper" StackPane.alignment="TOP_RIGHT">

                <VBox alignment="CENTER_LEFT" fillWidth="false" maxWidth="-Infinity" spacing="6" styleClass="map-status-pane" VBox.vgrow="NEVER">
                    <Label styleClass="map-status-title" text="Map Status" />
                    <VBox alignment="CENTER_LEFT" spacing="8">
                        <RadioButton fx:id="offlineRadio" text="Offline" />
                        <RadioButton fx:id="onlineRadio" text="Online" />
                    </VBox>
                </VBox>
            </VBox>
        </StackPane>
    </VBox>
</AnchorPane>
