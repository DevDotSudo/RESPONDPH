<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="700.0" prefWidth="1000.0" styleClass="evacuation-dialog-container" stylesheets="@/styles/evac_site/dialog/addevacsitedialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.evac_site.dialogs_controller.EditEvacSiteController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-dialog-header">
        <FontAwesomeIconView glyphName="HOME" size="24" styleClass="evacuation-header-icon" />
        <Label styleClass="evacuation-dialog-title" text="Add Evacuation Center" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" styleClass="evacuation-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="evacuation-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox alignment="CENTER" styleClass="evacuation-error-container">
        <Label fx:id="errorLabel" managed="false" styleClass="evacuation-error-label" visible="false" />
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="evacuation-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="evacuation-forms-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <VBox spacing="20" styleClass="evacuation-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-section-header">
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="20" styleClass="evacuation-section-icon" />
                    <Label styleClass="evacuation-section-title" text="Center Information" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox prefHeight="50.0" prefWidth="280.0" spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="evacuation-field-label" text="Center Name *" />
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="451.0" spacing="12" styleClass="evacuation-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HOME" size="16" styleClass="evacuation-field-icon" />
                            <TextField fx:id="centerNameFld" promptText="Enter center name" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox prefHeight="50.0" prefWidth="326.0" spacing="8">
                        <Label styleClass="evacuation-field-label" text="Capacity *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USERS" size="16" styleClass="evacuation-field-icon" />
                            <TextField fx:id="capacityFld" promptText="Enter maximum capacity" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="evacuation-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="20" styleClass="evacuation-section-icon" />
                    <Label styleClass="evacuation-section-title" text="Location Information" />
                </HBox>

                <HBox alignment="BOTTOM_LEFT">
                    <Button fx:id="getLocationBtn" styleClass="evacuation-location-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="LOCATION_ARROW" size="14" styleClass="evacuation-button-icon" />
                                <Label styleClass="evacuation-button-label" text="Get Location" />
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <!-- Address -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="evacuation-field-label" text="Latitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="MAP_PIN" size="16" styleClass="evacuation-field-icon" />
                            <TextField fx:id="latitudeFld" promptText="Enter latitude" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- City -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="evacuation-field-label" text="Longitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="MAP_PIN" size="16" styleClass="evacuation-field-icon" />
                            <TextField fx:id="longitudeFld" promptText="Enter longitude" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="evacuation-form-section">

                <VBox spacing="8">
                    <Label styleClass="evacuation-field-label" text="Notes" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evacuation-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="STICKY_NOTE" size="16" styleClass="evacuation-field-icon" />
                        <TextArea fx:id="notesFld" promptText="Enter notes about this evacuation center" styleClass="evacuation-text-area" HBox.hgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TextArea>
                    </HBox>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="evacuation-button-container">
        <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
        </padding>
        <Button fx:id="editBtn" styleClass="evacuation-save-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="evacuation-button-icon" />
                    <Label styleClass="evacuation-button-label" text="Edit Save" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>