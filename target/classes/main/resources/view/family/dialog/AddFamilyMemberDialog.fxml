<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox fx:id="root" prefHeight="700.0" prefWidth="1000.0" styleClass="family-dialog-container" stylesheets="@/styles/family/dialog/addfamilydialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.familymembers.dialogs_controller.AddFamilyController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-dialog-header">
        <FontAwesomeIconView glyphName="USER_PLUS" size="24" styleClass="family-header-icon" />
        <Label styleClass="family-dialog-title" text="Add Family Member" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" styleClass="family-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="family-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox alignment="CENTER" styleClass="family-error-container">
        <Label fx:id="errorLabel" managed="false" styleClass="family-error-label" visible="false" />
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="family-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="family-forms-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <VBox spacing="20" styleClass="family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-section-header">
                    <FontAwesomeIconView glyphName="SEARCH" size="20" styleClass="family-section-icon" />
                    <Label styleClass="family-section-title" text="Search Beneficiary" />
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="family-field-label" text="Search beneficiary name *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="USER" size="16" styleClass="family-field-icon" />
                        <ComboBox fx:id="beneficiaryNameFld" editable="true" promptText="Search beneficiary name" styleClass="family-dropdown" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="20" styleClass="family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-section-header">
                    <FontAwesomeIconView glyphName="USERS" size="20" styleClass="family-section-icon" />
                    <Label styleClass="family-section-title" text="Family Member Information" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="First Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="family-field-icon" />
                            <TextField fx:id="firstNameFld" promptText="Enter first name" styleClass="family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Middle Name" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="family-field-icon" />
                            <TextField fx:id="middleNameFld" promptText="Enter middle name" styleClass="family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Last Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="family-field-icon" />
                            <TextField fx:id="lastNameFld" promptText="Enter last name" styleClass="family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Birthdate *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="CALENDAR" size="16" styleClass="family-field-icon" />
                            <DatePicker fx:id="birthDatePicker" styleClass="family-date-picker" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Gender *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="VENUS_MARS" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="genderSelection" promptText="Select gender" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Male"/>
                                        <String fx:value="Female"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Marital Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEART" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="maritalStatusSelection" promptText="Select marital status" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Single"/>
                                        <String fx:value="Married"/>
                                        <String fx:value="Widowed"/>
                                        <String fx:value="Separated"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                        </HBox>
                    </VBox>
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="family-field-label" text="Relationship to Beneficiary *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="HEART" size="16" styleClass="family-field-icon" />
                        <ComboBox fx:id="relationshipSelection" promptText="Select relationship to beneficiary" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Son"/>
                                    <String fx:value="Daughter"/>
                                    <String fx:value="Grandchild"/>
                                    <String fx:value="Niece"/>
                                    <String fx:value="Nephew"/>
                                    <String fx:value="Brother"/>
                                    <String fx:value="Sister"/>
                                    <String fx:value="Uncle"/>
                                    <String fx:value="Auntie"/>
                                    <String fx:value="Wife"/>
                                    <String fx:value="Husband"/>
                                    <String fx:value="Common Law"/>
                                    <String fx:value="Step Father"/>
                                    <String fx:value="Step Mother"/>
                                    <String fx:value="Grandmother"/>
                                    <String fx:value="Grandfather"/>
                                    <String fx:value="Other relative"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="20" styleClass="family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-section-header">
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="family-section-icon" />
                    <Label styleClass="family-section-title" text="Vulnerability Indicators" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Disability Type *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="WHEELCHAIR" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="disabilityTypeSelection" promptText="Select disability type" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="None"/>
                                        <String fx:value="Physical"/>
                                        <String fx:value="Visual"/>
                                        <String fx:value="Hearing"/>
                                        <String fx:value="Speech"/>
                                        <String fx:value="Intellectual"/>
                                        <String fx:value="Mental/Psychosocial"/>
                                        <String fx:value="Due to Chronic Illness"/>
                                        <String fx:value="Multiple Disabilities"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Health Condition *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEARTBEAT" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="healthConditionSelection" promptText="Select health condition" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Healthy"/>
                                        <String fx:value="Temporarily ill"/>
                                        <String fx:value="Chronically ill"/>
                                        <String fx:value="Immunocompromised"/>
                                        <String fx:value="Terminally ill"/>
                                        <String fx:value="With History of Hospitalization/ Long-term Medical Equipment Dependency"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-section-header">
                    <FontAwesomeIconView glyphName="LINE_CHART" size="20" styleClass="family-section-icon" />
                    <Label styleClass="family-section-title" text="Education and Employment" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Employment Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="BRIEFCASE" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="employmentStatusSelection" promptText="Select employment status" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Regular full-time employment"/>
                                        <String fx:value="Self-employed with stable income"/>
                                        <String fx:value="Self-employed with unstable income"/>
                                        <String fx:value="Informal or irregular employment"/>
                                        <String fx:value="Unemployed"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>

                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="family-field-label" text="Education Level *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="GRADUATION_CAP" size="16" styleClass="family-field-icon" />
                            <ComboBox fx:id="educationLevelSelection" promptText="Select education level" styleClass="family-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="No Formal Education"/>
                                        <String fx:value="Elementary"/>
                                        <String fx:value="High School"/>
                                        <String fx:value="Vocational or technical training"/>
                                        <String fx:value="College or university level"/>
                                        <String fx:value="Graduate education"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="family-section-header">
                    <FontAwesomeIconView glyphName="STICKY_NOTE" size="20" styleClass="family-section-icon" />
                    <Label styleClass="family-section-title" text="Additional Information" />
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="family-field-label" text="Notes *" />
                    <TextArea fx:id="notesFld" promptText="Enter notes about this family member" styleClass="family-text-area" />
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="family-button-container">
        <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
        </padding>
        <Button fx:id="saveBtn" styleClass="family-save-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="family-button-icon" text="ï€Œ" />
                    <Label styleClass="family-button-label" text="Save Family Member" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
