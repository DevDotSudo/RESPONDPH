<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dashboardRoot"
            styleClass="dashboard-root"
            stylesheets="@/styles/dashboard.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1">

    <VBox AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          spacing="20">

        <Label styleClass="page-title" text="Dashboard">
            <VBox.margin>
                <Insets top="20" left="30" right="30" bottom="10" />
            </VBox.margin>
        </Label>

        <VBox styleClass="map-placeholder" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
            <Label styleClass="map-placeholder-text" text="Mapping na diri" />
        </VBox>

    </VBox>
</AnchorPane>
