<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="addAidRoot" prefHeight="800" prefWidth="850" spacing="0" styleClass="dialog-container" stylesheets="@/styles/aid/dialog/addaiddialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.AddAidController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="dialog-header">
        <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="24" styleClass="header-icon" />
        <Label styleClass="dialog-title" text="Distribute Aid" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="closeBtn" styleClass="close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="close-icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- Info Banner -->
    <HBox alignment="CENTER_LEFT" styleClass="info-banner">
        <padding>
            <Insets bottom="12" left="32" right="32" top="12" />
        </padding>
        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="16" styleClass="info-icon" />
        <Label fx:id="infoLabel" styleClass="info-text" text="Select aid type and disaster to begin distribution" />
    </HBox>

    <!-- Form Container -->
    <ScrollPane fitToWidth="true" styleClass="form-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="form-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <!-- Distribution Context Section -->
            <VBox spacing="16">
                <Label styleClass="section-header" text="Distribution Context" />
                <Separator />

                <!-- Aid Type Selection -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Aid Type *" />
                    <HBox maxWidth="-Infinity" prefHeight="54.0" prefWidth="500.0" spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="HEARTBEAT" styleClass="field-icon" />
                        <ComboBox fx:id="aidTypeComboBox" prefWidth="400" promptText="Select Aid Type" styleClass="combo-box" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <Label styleClass="field-hint" text="Choose the type of aid you want to distribute" />
                </VBox>

                <!-- Disaster Selection -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Disaster Event *" />
                    <HBox maxWidth="-Infinity" prefWidth="500.0" spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="FIRE" styleClass="field-icon" />
                        <ComboBox fx:id="disasterComboBox" prefWidth="400" promptText="Select Disaster Event" styleClass="combo-box" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <Label styleClass="field-hint" text="Select the disaster event for which you're distributing aid" />
                </VBox>

                <!-- NEW: Barangay Filter Section -->
                <VBox spacing="12">
                    <CheckBox fx:id="useBarangayFilterCheckbox" styleClass="checkbox-label"
                              text="Filter by Barangay" />

                    <VBox fx:id="barangaySelectionContainer" spacing="12" styleClass="subsection-container">
                        <padding>
                            <Insets bottom="12" left="16" right="16" top="12" />
                        </padding>

                        <!-- Barangay Mode Selection -->
                        <VBox spacing="8">
                            <Label styleClass="field-label" text="Distribution Scope" />

                            <RadioButton fx:id="allBarangaysRadio" styleClass="radio-label"
                                         text="All Barangays (No Filter)" />

                            <RadioButton fx:id="singleBarangayRadio" styleClass="radio-label"
                                         text="Single Barangay" />

                            <!-- Single Barangay Container -->
                            <VBox fx:id="singleBarangayContainer" spacing="8" managed="false" visible="false">
                                <padding>
                                    <Insets left="24" />
                                </padding>
                                <HBox spacing="12" styleClass="field-container">
                                    <FontAwesomeIconView glyphName="MAP_MARKER" styleClass="field-icon" />
                                    <ComboBox fx:id="barangayComboBox" prefWidth="350"
                                              promptText="Select Barangay" styleClass="combo-box" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Selection Summary -->
                <HBox fx:id="selectionSummaryBox" managed="false" spacing="12" styleClass="success-box" visible="false">
                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="20" styleClass="success-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="success-title" text="Distribution Configuration Ready" />
                        <Label fx:id="selectionSummaryLabel" styleClass="success-text" wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Aid Information Section -->
            <VBox spacing="16">
                <Label styleClass="section-header" text="Aid Information" />
                <Separator />

                <!-- Aid Name -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Aid Name *" />
                    <HBox maxWidth="-Infinity" prefWidth="500.0" spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="TAG" styleClass="field-icon" />
                        <TextField fx:id="nameFld" promptText="e.g., Food Pack, Medical Supplies"
                                   styleClass="text-field" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <!-- Quantity Row -->
                <HBox alignment="TOP_LEFT" spacing="16">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Available Quantity *" />
                        <HBox spacing="12" styleClass="field-container">
                            <FontAwesomeIconView glyphName="CUBES" styleClass="field-icon" />
                            <TextField fx:id="quantityFld" promptText="Total units (e.g., 100)"
                                       styleClass="text-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-hint" text="Total units available to distribute" />
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Quantity Per Beneficiary *" />
                        <HBox spacing="12" styleClass="field-container">
                            <FontAwesomeIconView glyphName="USER" styleClass="field-icon" />
                            <TextField fx:id="quantityPerBeneficiaryFld" promptText="Units per person (e.g., 2)"
                                       styleClass="text-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-hint" text="How many units each beneficiary receives" />
                    </VBox>
                </HBox>

                <!-- Cost Per Unit -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Cost Per Unit *" />
                    <HBox spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="MONEY" styleClass="field-icon" />
                        <TextField fx:id="costFld" promptText="Cost per unit (e.g., 500.00)"
                                   styleClass="text-field" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <Label styleClass="field-hint" text="Enter cost in Philippine Pesos (₱)" />
                </VBox>

                <!-- Provider -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Provider *" />
                    <HBox spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="TRUCK" styleClass="field-icon" />
                        <TextField fx:id="providerFld" promptText="e.g., Red Cross, DSWD, LGU"
                                   styleClass="text-field" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- Distribution Method Section -->
            <VBox spacing="16">
                <Label styleClass="section-header" text="Distribution Method" />
                <Separator />

                <!-- K-means Toggle -->
                <VBox spacing="12">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <CheckBox fx:id="useKMeansCheckbox" selected="true" styleClass="checkbox-label"
                                  text="Use K-Means Clustering Algorithm (3 Clusters)" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="badge-recommended">RECOMMENDED</Label>
                    </HBox>

                    <Label styleClass="field-description" wrapText="true"
                           text="K-means ensures fair distribution across 3 vulnerability levels by grouping beneficiaries based on their scores and prioritizing those with highest needs." />
                </VBox>

                <!-- Cluster Settings -->
                <VBox spacing="8">
                    <Label styleClass="field-label" text="Distribution Clusters" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="field-container">
                        <FontAwesomeIconView glyphName="SITEMAP" styleClass="field-icon" />
                        <HBox alignment="CENTER_LEFT" spacing="8"
                              style="-fx-background-color: #ecf0f1; -fx-padding: 8 16; -fx-background-radius: 5; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5;">
                            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="3 Clusters:" />
                            <Label style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 2 8; -fx-background-radius: 3; -fx-font-size: 11px; -fx-font-weight: bold;" text="Low" />
                            <Label style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 2 8; -fx-background-radius: 3; -fx-font-size: 11px; -fx-font-weight: bold;" text="Medium" />
                            <Label style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 2 8; -fx-background-radius: 3; -fx-font-size: 11px; -fx-font-weight: bold;" text="High" />
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 4 10; -fx-background-radius: 3; -fx-font-size: 10px; -fx-font-weight: bold;" text="FIXED" />
                    </HBox>
                    <Label styleClass="field-hint" wrapText="true"
                           text="System uses 3 clusters: Low Priority (0.00-0.33), Medium Priority (0.34-0.66), High Priority (0.67-1.00)" />
                </VBox>

                <!-- Distribution Info Box -->
                <HBox spacing="12" styleClass="info-box">
                    <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="20" styleClass="info-box-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="info-box-title" text="How 3-Cluster K-Means Works:" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Groups beneficiaries into 3 clusters based on vulnerability scores (0.0 to 1.0)" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Distributes aid starting from High Priority cluster first" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Ensures balanced distribution across different need levels" />
                        <Label styleClass="info-box-text" wrapText="true"
                               text="• Works seamlessly with barangay filtering" />
                    </VBox>
                </HBox>

                <!-- Simple Distribution Warning -->
                <HBox fx:id="simpleDistributionWarning" managed="false" spacing="12"
                      styleClass="warning-box" visible="false">
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="warning-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="warning-title" text="Simple Score-Based Distribution" />
                        <Label styleClass="warning-text" wrapText="true"
                               text="Aid will be distributed to the top N beneficiaries by score only, without clustering." />
                    </VBox>
                </HBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="button-container">
        <padding>
            <Insets bottom="24" left="32" right="32" top="24" />
        </padding>

        <!-- Preview Button -->
        <Button fx:id="previewBtn" styleClass="secondary-btn">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="EYE" styleClass="btn-icon" />
                    <Label styleClass="btn-label" text="Preview Distribution" textFill="#fffdfd" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Cancel Button -->
        <Button fx:id="cancelBtn" onAction="#handleClose" styleClass="cancel-btn">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" styleClass="btn-icon" />
                    <Label styleClass="btn-label" text="Cancel" textFill="#fff9f9" />
                </HBox>
            </graphic>
        </Button>

        <!-- Distribute Aid Button -->
        <Button fx:id="saveAidBtn" styleClass="primary-btn">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="PAPER_PLANE" styleClass="btn-icon" />
                    <Label styleClass="btn-label" text="Distribute Aid" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>