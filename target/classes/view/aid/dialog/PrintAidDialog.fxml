<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="700.0" prefWidth="600" spacing="0" styleClass="dialog-root" stylesheets="@/styles/aid/dialog/printaiddialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.PrintAidDialogController">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="PRINT" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Print Aid Distribution Report" />
            <Label styleClass="dialog-subtitle" text="Select disaster, aid type, and optionally filter by barangay to generate report" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="cancelButton" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Form Container -->
    <VBox spacing="24" styleClass="dialog-body">
        <padding>
            <Insets bottom="24" left="24" right="24" top="20" />
        </padding>

        <!-- ==================== SECTION 1: REPORT CRITERIA ==================== -->
        <VBox spacing="18" styleClass="form-section">
            <!-- Section Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                <FontAwesomeIconView glyphName="FILTER" size="18" styleClass="section-icon" />
                <Label styleClass="section-title" text="Report Criteria" />
                <Region HBox.hgrow="ALWAYS" />
                <Label styleClass="section-subtitle" text="Step 1 of 2" />
            </HBox>

            <!-- Disaster Selection -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Select Disaster *" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                    <FontAwesomeIconView glyphName="FIRE" size="14" styleClass="field-icon" />
                    <ComboBox fx:id="disasterComboBox" maxWidth="1.7976931348623157E308" promptText="Choose a disaster" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

            <!-- Aid Type Selection -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Select Aid Type *" />
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                    <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="14" styleClass="field-icon" />
                    <ComboBox fx:id="aidTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Choose aid type" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>
        </VBox>

        <Separator />

        <!-- ==================== SECTION 2: BARANGAY FILTER ==================== -->
        <VBox spacing="18" styleClass="form-section">
            <!-- Section Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                <FontAwesomeIconView glyphName="MAP_MARKER" size="18" styleClass="section-icon" />
                <Label styleClass="section-title" text="Barangay Filter" />
                <Region HBox.hgrow="ALWAYS" />
                <Label styleClass="section-subtitle" text="Step 2 of 2" />
            </HBox>

            <!-- Barangay Filter Section -->
            <VBox spacing="12" styleClass="subsection-container">
                <!-- Filter Toggle -->
                <CheckBox fx:id="useBarangayFilterCheckBox" styleClass="checkbox"
                          text="Filter by specific barangay (Optional)" />

                <!-- Barangay Selection -->
                <VBox fx:id="barangaySelectionContainer" spacing="8" managed="false" visible="false">
                    <padding>
                        <Insets left="24" top="12" />
                    </padding>

                    <Label styleClass="field-label" text="Select Barangay" />
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                        <FontAwesomeIconView glyphName="MAP_MARKER" size="14" styleClass="field-icon" />
                        <ComboBox fx:id="barangayComboBox" maxWidth="1.7976931348623157E308"
                                  promptText="Select Barangay" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <Label styleClass="field-helper-text"
                           text="Leave unchecked to include all barangays in the report" />
                </VBox>
            </VBox>

            <!-- Info Panel -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-box">
                <FontAwesomeIconView glyphName="INFO_CIRCLE" size="20" styleClass="info-box-icon" />
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label fx:id="beneficiaryCountLabel" styleClass="info-box-title" text="Beneficiaries: 0" />
                    <Label styleClass="info-box-text" text="• Sorted by K-Means priority score (high to low)" />
                    <Label styleClass="info-box-text" text="• Will print on bond paper (Letter size)" />
                    <Label styleClass="info-box-text" text="• Report includes beneficiary details and distribution summary" />
                </VBox>
            </HBox>
        </VBox>

    </VBox>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="previewButton" disable="true" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="EYE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Preview Report" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="printButton" disable="true" styleClass="btn-primary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="PRINT" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Print Report" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>