<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="750.0" prefWidth="1100.0" spacing="0" styleClass="dialog-root" stylesheets="@/styles/aid/dialog/printaiddialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid.dialogs_controller.PrintAidDialogController">

    <!-- ==================== HEADER SECTION ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="PRINT" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Print Aid Distribution Report" />
            <Label styleClass="dialog-subtitle" text="Select aid type, disaster, and optional barangay filter" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== ERROR CONTAINER ==================== -->
    <VBox alignment="CENTER" managed="false" styleClass="error-box" visible="false">
        <padding>
            <Insets bottom="12" left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>

    <!-- ==================== MAIN FORM CONTAINER ==================== -->
    <ScrollPane fitToWidth="true" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: REPORT CONFIGURATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="COG" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Report Configuration" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 1 of 3" />
                </HBox>

                <!-- Selection Fields -->
                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Aid Name -->
                    <VBox spacing="8" GridPane.columnIndex="0">
                        <Label styleClass="field-label" text="Aid Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="TAG" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="aidNameComboBox" maxWidth="1.7976931348623157E308" promptText="Select aid name" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Disaster Selection -->
                    <VBox spacing="8" GridPane.columnIndex="1">
                        <Label styleClass="field-label" text="Disaster Event" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="FIRE" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="disasterComboBox" maxWidth="1.7976931348623157E308" promptText="Select disaster event" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- General Aid Option -->
                <VBox spacing="12" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <FontAwesomeIconView glyphName="INFO_CIRCLE" size="16" styleClass="info-icon" />
                        <Label styleClass="info-title" text="Distribution Mode" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" prefHeight="44" spacing="10" styleClass="flat-input">
                        <padding>
                            <Insets left="14" right="14" />
                        </padding>
                        <FontAwesomeIconView glyphName="HAND_HOLDING_HEART" size="14" styleClass="field-icon" />
                        <CheckBox fx:id="generalAidCheckBox" styleClass="field-checkbox" text="General Aid Distribution (No Specific Disaster)" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <Label styleClass="field-helper-text" text="Check this to print general aid distribution not tied to a specific disaster event." wrapText="true" />
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: BARANGAY FILTER ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Location Filter" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 2 of 3" />
                </HBox>

                <!-- Barangay Filter Checkbox -->
                <VBox spacing="12">
                    <HBox alignment="CENTER_LEFT" prefHeight="44" spacing="10" styleClass="flat-input">
                        <padding>
                            <Insets left="14" right="14" />
                        </padding>
                        <FontAwesomeIconView glyphName="FILTER" size="14" styleClass="field-icon" />
                        <CheckBox fx:id="useBarangayFilterCheckBox" styleClass="field-checkbox" text="Filter by specific barangay" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <VBox spacing="8">
                        <Label styleClass="field-label" text="Barangay" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="flat-input">
                            <FontAwesomeIconView glyphName="MAP_MARKER" size="14" styleClass="field-icon" />
                            <ComboBox fx:id="barangayComboBox" maxWidth="1.7976931348623157E308" promptText="Select Barangay" styleClass="field-combo" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <Label styleClass="field-helper-text" text="Leave unchecked to include all barangays" />
                    </VBox>
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 3: REPORT SUMMARY ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="FILE_ALT" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Report Summary" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Step 3 of 3" />
                </HBox>

                <!-- Beneficiary Info -->
                <VBox spacing="12" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <FontAwesomeIconView glyphName="USERS" size="20" styleClass="info-icon" />
                        <Label fx:id="beneficiaryCountLabel" styleClass="info-title" text="Beneficiaries: 0" />
                    </HBox>

                    <GridPane hgap="16" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        </columnConstraints>

                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="0">
                            <FontAwesomeIconView glyphName="SORT_AMOUNT_DESC" size="12" styleClass="field-icon" />
                            <Label styleClass="info-text" text="Sorted by K-Means priority score" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1">
                            <FontAwesomeIconView glyphName="FILE" size="12" styleClass="field-icon" />
                            <Label styleClass="info-text" text="Letter size (8.5&quot; x 11&quot;)" />
                        </HBox>
                  <rowConstraints>
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Print Preview Info -->
                <HBox spacing="12" styleClass="warning-box">
                    <padding>
                        <Insets bottom="12" left="16" right="16" top="12" />
                    </padding>
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="20" styleClass="info-icon" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="info-title" text="Print Format" />
                        <Label styleClass="info-text" text="Report will be formatted with: Header section, Beneficiary list table, Summary statistics, QR code for verification, and Printed date/time." wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="previewButton" disable="true" prefHeight="42.0" styleClass="btn-secondary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="EYE" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Preview" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="printButton" disable="true" prefHeight="42.0" prefWidth="120.0" styleClass="btn-primary">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="PRINT" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Print" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="cancelButton" prefHeight="42.0" styleClass="btn-secondary-alt">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="btn-icon" />
                    <Label styleClass="btn-text" text="Cancel" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
