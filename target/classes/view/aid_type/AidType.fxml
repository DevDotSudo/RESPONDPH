<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" styleClass="root-pane" stylesheets="@/styles/aid_type/aidtype.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.aid_type.AidTypeController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox styleClass="header-section" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="24" left="24" right="24" top="24" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="16">
                <FontAwesomeIconView glyphName="MEDKIT" size="24" styleClass="page-icon" />
                <Label styleClass="page-title" text="Manage Aids" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="toolbar">
                <VBox.margin>
                    <Insets top="20" />
                </VBox.margin>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="search-icon" />
                    <TextField fx:id="searchFld" promptText="Search by username, name..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="searchBtn" mnemonicParsing="false" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Search" />
                        </HBox>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addButton" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Add Aid" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="refreshButton" styleClass="secondary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="refresh-icon" />
                            <Label styleClass="button-label" text="Refresh" />
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </VBox>

        <VBox styleClass="table-container" VBox.vgrow="ALWAYS">

            <TableView fx:id="adminTable" styleClass="admin-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" maxWidth="80" minWidth="80" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="150" text="Aid Name" />
                    <TableColumn fx:id="adminNameColumn" prefWidth="150" text="Added by" />
                    <TableColumn fx:id="notesColumn" prefWidth="150" text="Notes" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>
