<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox fx:id="root" prefHeight="700.0" prefWidth="1000.0" styleClass="edit-dialog-container" stylesheets="@/styles/beneficiary/dialog/editbeneficiariesdialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.beneficiary.dialogs_controller.EditBeneficiariesDialogController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-dialog-header">
        <FontAwesomeIconView glyphName="EDIT" size="24" styleClass="edit-header-icon" />
        <Label styleClass="edit-dialog-title" text="Update Beneficiary" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" styleClass="edit-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="edit-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox alignment="CENTER" styleClass="edit-error-container">
        <Label fx:id="errorLabel" managed="false" styleClass="edit-error-label" visible="false" />
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="edit-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="edit-forms-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <VBox spacing="20" styleClass="edit-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-section-header">
                    <FontAwesomeIconView glyphName="USER" size="20" styleClass="edit-section-icon" />
                    <Label styleClass="edit-section-title" text="Core Beneficiary Profile" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="First Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="firstNameFld" promptText="Enter first name" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Middle Name" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="middleNameFld" promptText="Enter middle name" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Last Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="lastNameFld" promptText="Enter last name" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Birthdate *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="CALENDAR" size="16" styleClass="edit-field-icon" />
                            <DatePicker fx:id="birthDatePicker" styleClass="edit-date-picker" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Gender *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="VENUS_MARS" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="genderSelection" promptText="Select gender" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Male"/>
                                        <String fx:value="Female"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Mobile Number" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="PHONE" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="mobileNumberFld" promptText="Enter mobile number" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Barangay *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEART" size="16" styleClass="input-icon" />
                            <ComboBox fx:id="barangaySelection" promptText="Select Barangay" styleClass="combo-box" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Alacaygan"/>
                                        <String fx:value="Bariga"/>
                                        <String fx:value="Belen"/>
                                        <String fx:value="Bobon"/>
                                        <String fx:value="Bularan"/>
                                        <String fx:value="Carmelo"/>
                                        <String fx:value="De La Paz"/>
                                        <String fx:value="Dugwakan"/>
                                        <String fx:value="Fuentes"/>
                                        <String fx:value="Juanico"/>
                                        <String fx:value="Libertad"/>
                                        <String fx:value="Magdalo"/>
                                        <String fx:value="Managopaya"/>
                                        <String fx:value="Merced"/>
                                        <String fx:value="Poblacion"/>
                                        <String fx:value="San Salvador"/>
                                        <String fx:value="Talokgangan"/>
                                        <String fx:value="Zona Sur"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Marital Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEART" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="maritalStatusSelection" promptText="Select marital status" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Single"/>
                                        <String fx:value="Married"/>
                                        <String fx:value="Widowed"/>
                                        <String fx:value="Separated"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Solo Parent Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="CHILD" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="soloParentStatusSelection" promptText="Select solo parent status" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Not a Solo Parent"/>
                                        <String fx:value="Solo Parent (with support network)"/>
                                        <String fx:value="Solo Parent (without support)"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="20" styleClass="edit-section-icon" />
                    <Label styleClass="edit-section-title" text="Geographical Location" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Latitude" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="MAP_MARKER" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="latitudeFld" promptText="Enter latitude" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Longitude" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="MAP_MARKER" size="16" styleClass="edit-field-icon" />
                            <TextField fx:id="longitudeFld" promptText="Enter longitude" styleClass="edit-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Action" />
                        <Button fx:id="getLocationBtn" styleClass="edit-location-button" HBox.hgrow="ALWAYS">
                            <graphic>
                                <HBox alignment="CENTER" spacing="8">
                                    <FontAwesomeIconView glyphName="LOCATION_ARROW" size="14" styleClass="edit-button-icon" />
                                    <Label styleClass="edit-button-label" text="Get Location" />
                                </HBox>
                            </graphic>
                        </Button>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-section-header">
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="edit-section-icon" />
                    <Label styleClass="edit-section-title" text="Vulnerability Indicators" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Disability Type *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="WHEELCHAIR" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="disabilityTypeSelection" promptText="Select disability type" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="None"/>
                                        <String fx:value="Physical"/>
                                        <String fx:value="Visual"/>
                                        <String fx:value="Hearing"/>
                                        <String fx:value="Speech"/>
                                        <String fx:value="Intellectual"/>
                                        <String fx:value="Mental/Psychosocial"/>
                                        <String fx:value="Due to Chronic Illness"/>
                                        <String fx:value="Multiple Disabilities"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Health Condition *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEARTBEAT" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="healthConditionSelection" promptText="Select health condition" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Healthy"/>
                                        <String fx:value="Temporarily ill"/>
                                        <String fx:value="Chronically ill"/>
                                        <String fx:value="Immunocompromised"/>
                                        <String fx:value="Terminally ill"/>
                                        <String fx:value="With History of Hospitalization/ Long-term Medical Equipment Dependency"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Clean Water Access *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="TINT" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="cleanWaterAccessSelection" promptText="Select clean water access" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Daily access to clean and safe water"/>
                                        <String fx:value="Irregular or limited access to clean water"/>
                                        <String fx:value="No access to clean water"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="edit-field-label" text="Sanitation Facilities *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="HOME" size="16" styleClass="edit-field-icon" />
                        <ComboBox fx:id="sanitationFacilitiesSelection" promptText="Select sanitation facility" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Safely managed private toilet"/>
                                    <String fx:value="Shared sanitation facility"/>
                                    <String fx:value="Unimproved sanitation facility"/>
                                    <String fx:value="No sanitation facility available"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-section-header">
                    <FontAwesomeIconView glyphName="BUILDING" size="20" styleClass="edit-section-icon" />
                    <Label styleClass="edit-section-title" text="Housing and Infrastructure" />
                </HBox>

                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="House Construction *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="BUILDING" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="houseConstructionTypeSelection" promptText="Select construction type" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Reinforced concrete or masonry"/>
                                        <String fx:value="Light materials (bamboo, nipa, thatch, cogon"/>
                                        <String fx:value="Semi-concrete with light roofing (GI, asbestos)"/>
                                        <String fx:value="Makeshift shelter (wood, tarpaulin)"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Ownership Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="KEY" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="ownershipStatusSelection" promptText="Select ownership status" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Owned with formal title"/>
                                        <String fx:value="Owned without formal title"/>
                                        <String fx:value="Rented"/>
                                        <String fx:value="Informal settler"/>
                                        <String fx:value="Evicted or displaced"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-section-header">
                    <FontAwesomeIconView glyphName="LINE_CHART" size="20" styleClass="edit-section-icon" />
                    <Label styleClass="edit-section-title" text="Socio-Economic Status" />
                </HBox>

                <HBox  spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Employment Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="BRIEFCASE" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="employmentStatusSelection" promptText="Select employment status" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Regular full-time employment"/>
                                        <String fx:value="Self-employed with stable income"/>
                                        <String fx:value="Self-employed with unstable income"/>
                                        <String fx:value="Informal or irregular employment"/>
                                        <String fx:value="Unemployed"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Monthly Income *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="MONEY" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="monthlyIncomeSelection" promptText="Select income range" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Less then 12,030 PHP (Poor)"/>
                                        <String fx:value="12,030 to 24,060 PHP (Low Income)"/>
                                        <String fx:value="24,061 to 84,210 PHP (Middle Class)"/>
                                        <String fx:value="84,211 to 144,360 PHP (Upper Middle Income)"/>
                                        <String fx:value="144,361 t0 240,600 PHP (Upper Income)"/>
                                        <String fx:value="At least 244,350(Rich)"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-field-label" text="Education Level *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="GRADUATION_CAP" size="16" styleClass="edit-field-icon" />
                            <ComboBox fx:id="educationLevelSelection" promptText="Select education level" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="No formal education"/>
                                        <String fx:value="Elementary level completed"/>
                                        <String fx:value="High school level completed"/>
                                        <String fx:value="Vocational or technical training"/>
                                        <String fx:value="College or university level"/>
                                        <String fx:value="Graduate education"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="edit-field-label" text="Digital Access *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="LAPTOP" size="16" styleClass="edit-field-icon" />
                        <ComboBox fx:id="digitalAccessSelection" promptText="Select digital access" styleClass="edit-dropdown" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Reliable Internet and Device Access"/>
                                    <String fx:value="Intermittent internet or device access"/>
                                    <String fx:value="Limited or shared access only"/>
                                    <String fx:value="No digital access"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="edit-button-container">
        <padding>
            <Insets bottom="32" left="32" right="32" top="24" />
        </padding>
        <Button fx:id="updateBeneficiaryBtn" styleClass="edit-update-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="edit-button-icon" />
                    <Label styleClass="edit-button-label" text="Update Beneficiary" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
