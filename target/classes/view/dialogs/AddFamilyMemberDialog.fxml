<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" alignment="CENTER" prefHeight="660.0" prefWidth="1037.0" styleClass="dialog-container" stylesheets="@/styles/dialogs/addfamilymemberdialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.familymembers.dialogs_controller.AddFamilyController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <HBox maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
        <Label maxWidth="1.7976931348623157E308" styleClass="dialog-title" text="Add Family Member" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" alignment="CENTER" contentDisplay="RIGHT" maxHeight="49.0" maxWidth="54.0" prefHeight="49.0" prefWidth="54.0" styleClass="exit-button">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" styleClass="button-icon" />
                </HBox>
            </graphic>
        </Button>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </HBox>
    <Separator prefWidth="200.0">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin></Separator>

    <Label fx:id="errorLabel" managed="false" styleClass="error-label" visible="false" />

    <ScrollPane fitToWidth="true" styleClass="form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="10.0" styleClass="forms-container">
            <VBox spacing="10.0" styleClass="form-section">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <VBox spacing="6"/>
                <Label styleClass="field-label" text="Search beneficiary name *"/>
                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0"
                      prefWidth="301.0" spacing="8" styleClass="input-container">
                    <FontAwesomeIconView glyphName="USER" styleClass="field-icon"/>
                    <ComboBox fx:id="beneficiaryNameFld" editable="true" maxWidth="1.7976931348623157E308"
                              promptText="Search beneficiary name." styleClass="dropdown" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
      
          <Label alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" styleClass="dialog-subtitle" text="Complete all family member information below">
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
         </Label>

            <VBox spacing="12" styleClass="form-section">

                <GridPane hgap="12" vgap="12">
                    <Label styleClass="field-label" text="First Name *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="USER" styleClass="field-icon" />
                        <TextField fx:id="firstNameFld" promptText="Enter first name" styleClass="input-field" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <Label styleClass="field-label" text="Middle Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="USER" styleClass="field-icon" />
                        <TextField fx:id="middleNameFld" promptText="Enter middle name" styleClass="input-field" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <Label styleClass="field-label" text="Last Name *" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="USER" styleClass="field-icon" />
                        <TextField fx:id="lastNameFld" promptText="Enter last name" styleClass="input-field" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <Label styleClass="field-label" text="Birthdate *" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <FontAwesomeIconView glyphName="CALENDAR" styleClass="field-icon" />
                        <DatePicker fx:id="birthDatePicker" maxWidth="1.7976931348623157E308" styleClass="birthdate-picker" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <Label styleClass="field-label" text="Gender *" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <FontAwesomeIconView glyphName="VENUS_MARS" styleClass="field-icon" />
                        <ComboBox fx:id="genderSelection" maxWidth="1.7976931348623157E308" promptText="Select gender" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>

                    <Label styleClass="field-label" text="Marital Status *" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="2" GridPane.rowIndex="3">
                        <FontAwesomeIconView glyphName="HEART" styleClass="field-icon" />
                        <ComboBox fx:id="maritalStatusSelection" maxWidth="1.7976931348623157E308" promptText="Select marital status" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>
               <Label layoutX="634.0" layoutY="10.0" styleClass="field-label" text="Relationship to Beneficiary  *" GridPane.rowIndex="4" />
                    <HBox alignment="CENTER_LEFT" layoutX="637.0" layoutY="135.0" spacing="8"
                          styleClass="input-container" GridPane.rowIndex="5">
                        <FontAwesomeIconView glyphName="HEART" styleClass="field-icon"/>
                        <ComboBox fx:id="relationshipSelection" maxWidth="1.7976931348623157E308"
                                  promptText="Select relationship to beneficiary" styleClass="dropdown"
                                  HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.34" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </VBox>

            <!-- Vulnerability Indicators Form -->
            <VBox spacing="12" styleClass="form-section">
                <VBox spacing="6">
                    <Separator prefWidth="140" styleClass="section-separator" />
                </VBox>

                <GridPane hgap="12" vgap="12">
                    <Label styleClass="field-label" text="Disability Type *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="WHEELCHAIR" styleClass="field-icon" />
                        <ComboBox fx:id="disabilityTypeSelection" maxWidth="1.7976931348623157E308" promptText="Select disability type" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>

                    <Label styleClass="field-label" text="Health Condition *" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="HEARTBEAT" styleClass="field-icon" />
                        <ComboBox fx:id="healthConditionSelection" maxWidth="1.7976931348623157E308" promptText="Select health condition" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>
                    <Label styleClass="field-label" text="Employment Status *" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.rowIndex="3">
                        <FontAwesomeIconView glyphName="GRADUATION_CAP" styleClass="field-icon" />
                        <ComboBox fx:id="educationLevelSelection" maxWidth="1.7976931348623157E308" promptText="Select education level" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="input-container" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <FontAwesomeIconView glyphName="BRIEFCASE" styleClass="field-icon" />
                        <ComboBox fx:id="employmentStatusSelection" maxWidth="1.7976931348623157E308" promptText="Select employment status" HBox.hgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="dropdown" />
                            </styleClass>
                        </ComboBox>
                    </HBox>

                    <Label styleClass="field-label" text="Education Level *" GridPane.rowIndex="2" />

                    <columnConstraints>
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                  <ColumnConstraints minWidth="10.0" percentWidth="33.33" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </VBox>
            <VBox layoutX="10.0" layoutY="351.0" spacing="12" styleClass="form-section">
                <VBox spacing="6">
                    <Separator prefWidth="140" styleClass="section-separator"/>
                </VBox>
                <Label styleClass="field-label" text="Notes *"/>
                <TextArea fx:id="notesFld" promptText="Enter a notes."/>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="12" styleClass="button-container">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <Button fx:id="saveBtn" prefHeight="43.0" prefWidth="192.0" styleClass="save-button">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="CHECK" styleClass="button-icon" />
                    <Label styleClass="button-text" text="Save" />
                </HBox>
            </graphic>
        </Button>
    </HBox>
</VBox>
