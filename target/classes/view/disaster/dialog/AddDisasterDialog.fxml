<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="700.0" prefWidth="1000.0" spacing="0" styleClass="disaster-dialog-container" stylesheets="@/styles/disaster/dialog/adddisasterdialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster.dialogs_controller.AddDisasterDialogController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-dialog-header">
        <FontAwesomeIconView glyphName="FIRE" size="24" styleClass="disaster-header-icon" />
        <Label styleClass="disaster-dialog-title" text="Add Disaster" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" styleClass="disaster-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="disaster-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox alignment="CENTER" styleClass="disaster-error-container">
        <Label fx:id="errorLabel" managed="false" styleClass="disaster-error-label" visible="false" />
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="disaster-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="disaster-forms-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <!-- Disaster Information -->
            <VBox spacing="20" styleClass="disaster-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-section-header">
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="20" styleClass="disaster-section-icon" />
                    <Label styleClass="disaster-section-title" text="Disaster Information" />
                </HBox>

                <!-- First Row: Disaster Type and Name -->
                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <!-- Disaster Type -->
                    <VBox prefHeight="50.0" prefWidth="280.0" spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="disaster-field-label" text="Disaster Type *" />
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="451.0" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="FIRE" size="16" styleClass="disaster-field-icon" />
                            <ComboBox fx:id="disasterType" promptText="Select disaster type" styleClass="disaster-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Disaster Name -->
                    <VBox prefHeight="50.0" prefWidth="274.0" spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="disaster-field-label" text="Disaster Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="FIRE" size="16" styleClass="disaster-field-icon" />
                            <TextField fx:id="disasterNameFld" promptText="Enter disaster name" styleClass="disaster-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
   
                   <!-- Second Row: Disaster Date -->
                   <VBox prefHeight="50.0" prefWidth="326.0" spacing="8">
                       <Label styleClass="disaster-field-label" text="Disaster Date *" />
                       <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                           <FontAwesomeIconView glyphName="CALENDAR" size="16" styleClass="disaster-field-icon" />
                           <DatePicker fx:id="datePicker" styleClass="disaster-date-picker" HBox.hgrow="ALWAYS" />
                       </HBox>
                   </VBox>
                </HBox>
            </VBox>

            <!-- Location Information -->
            <VBox spacing="20" styleClass="disaster-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="20" styleClass="disaster-section-icon" />
                    <Label styleClass="disaster-section-title" text="Location Information" />
                </HBox>

                <!-- Get Location Button -->
                <HBox alignment="BOTTOM_LEFT">
                    <Button fx:id="getLocationBtn" styleClass="disaster-location-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="LOCATION_ARROW" size="14" styleClass="disaster-button-icon" />
                                <Label styleClass="disaster-button-label" text="Get Location" />
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <!-- Latitude -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="disaster-field-label" text="Latitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="GLOBE" size="16" styleClass="disaster-field-icon" />
                            <TextField fx:id="latitudeFld" promptText="Enter latitude" styleClass="disaster-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Longitude -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="disaster-field-label" text="Longitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="GLOBE" size="16" styleClass="disaster-field-icon" />
                            <TextField fx:id="longitudeFld" promptText="Enter longitude" styleClass="disaster-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Radius -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="disaster-field-label" text="Radius (m) *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="COMPASS" size="16" styleClass="disaster-field-icon" />
                            <TextField fx:id="radiusFld" promptText="Enter radius in meters" styleClass="disaster-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Notes Section -->
            <VBox spacing="20" styleClass="disaster-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-section-header">
                    <FontAwesomeIconView glyphName="STICKY_NOTE" size="20" styleClass="disaster-section-icon" />
                    <Label styleClass="disaster-section-title" text="Additional Information" />
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="disaster-field-label" text="Notes" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="disaster-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="STICKY_NOTE" size="16" styleClass="disaster-field-icon" />
                        <TextField fx:id="notesFld" promptText="Enter notes about this disaster" styleClass="disaster-input-field" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="disaster-button-container">
        <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
        </padding>
        <Button fx:id="saveBtn" styleClass="disaster-save-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="disaster-button-icon" />
                    <Label styleClass="disaster-button-label" text="Save Disaster" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
