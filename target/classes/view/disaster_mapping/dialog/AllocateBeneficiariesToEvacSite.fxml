<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="750.0" prefWidth="1100.0" spacing="0" styleClass="dialog-root" stylesheets="@/styles/disaster_mapping/dialog/allocatebeneficiariestoevacsite.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster_mapping.dialogs_controller.AllocateBeneficiariesToEvacSiteController">

    <!-- ==================== HEADER SECTION ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="USERS" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label styleClass="dialog-title" text="Allocate Beneficiaries to Nearest Evacuation Site" />
            <Label styleClass="dialog-subtitle" text="View and manage beneficiary allocation based on proximity and vulnerability scores" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== ERROR CONTAINER ==================== -->
    <VBox alignment="CENTER" managed="false" styleClass="error-box" visible="false">
        <padding>
            <Insets bottom="12" left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>

    <!-- ==================== MAIN FORM CONTAINER ==================== -->
    <ScrollPane fitToWidth="true" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: EVACUATION SITE INFORMATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="BUILDING" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Evacuation Site Information" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Site Details" />
                </HBox>

                <!-- Evacuation Site Info Card -->
                <VBox spacing="16" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <FontAwesomeIconView glyphName="MAP_MARKER" size="20" styleClass="info-icon" />
                        <Label fx:id="evacSiteNameLabel" styleClass="info-title" text="Evacuation Site: Loading..." />
                    </HBox>

                    <GridPane hgap="24" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                     <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="33.33" prefWidth="100.0" />
                        </columnConstraints>

                        <!-- Capacity -->
                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="0">
                            <FontAwesomeIconView glyphName="EXPAND" size="14" styleClass="field-icon" />
                            <Label styleClass="info-text" text="Capacity:" />
                            <Label fx:id="capacityLabel" styleClass="info-value" text="-" />
                        </HBox>

                        <!-- Occupied -->
                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1">
                            <FontAwesomeIconView glyphName="USER" size="14" styleClass="field-icon" />
                            <Label styleClass="info-text" text="Occupied:" />
                            <Label fx:id="occupiedLabel" styleClass="info-value" text="-" />
                        </HBox>

                        <!-- Remaining -->
                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="2">
                            <FontAwesomeIconView glyphName="DASHBOARD" size="14" styleClass="field-icon" />
                            <Label styleClass="info-text" text="Remaining:" />
                            <Label fx:id="remainingLabel" styleClass="info-value" text="-" />
                        </HBox>
   
                       <!-- Disaster Info -->
                       <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="3">
                           <FontAwesomeIconView glyphName="FIRE" size="14" styleClass="field-icon" />
                           <Label styleClass="info-text" text="Disaster:" />
                           <Label fx:id="disasterLabel" styleClass="info-value" text="-" />
                       </HBox>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <Separator styleClass="info-separator" />
                </VBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: BENEFICIARY ALLOCATION ==================== -->
            <VBox spacing="18" styleClass="form-section">

                <!-- Allocation Info -->
                <VBox spacing="8" styleClass="info-box">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="16" styleClass="info-icon" />
                        <Label styleClass="info-title" text="About Allocation" />
                    </HBox>
                    <Label styleClass="info-text" text="• Beneficiaries are automatically allocated to the nearest evacuation site based on geographic distance.&#10;• Priority is given to beneficiaries with higher vulnerability scores.&#10;• Allocation respects the maximum capacity of each evacuation site.&#10;• Unassigned beneficiaries may be outside the coverage radius or all nearby sites may be at capacity." wrapText="true" />
                </VBox>
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="TABLE" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Beneficiary Allocation" />
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="12">
                        <FontAwesomeIconView glyphName="USERS" size="14" styleClass="field-icon" />
                        <Label fx:id="totalBeneficiariesLabel" styleClass="badge-info" text="Total: 0" />
                    </HBox>
                </HBox>

                <!-- Table Container -->
                <VBox spacing="12" styleClass="table-container">
                    <!-- Table Toolbar -->
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="table-toolbar">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>

                        <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="field-icon" />
                        <TextField fx:id="searchField" promptText="Search beneficiaries..." styleClass="table-search-field" HBox.hgrow="ALWAYS" />

                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Table -->
                    <TableView fx:id="beneficiariesTable" styleClass="custom-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                            <TableColumn fx:id="nameColumn" prefWidth="220.0" text="Beneficiary Name" />
                            <TableColumn fx:id="scoreColumn" prefWidth="140.0" text="Vulnerability Score" />
                            <TableColumn fx:id="categoryColumn" prefWidth="130.0" text="Category" />
                            <TableColumn fx:id="householdColumn" prefWidth="120.0" text="Household Size" />
                            <TableColumn fx:id="assignedSiteColumn" prefWidth="220.0" text="Assigned Evacuation Site" />
                            <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Allocation Status" />
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="12">
                                <FontAwesomeIconView glyphName="USERS" size="48" styleClass="placeholder-icon" />
                                <Label styleClass="placeholder-text" text="No beneficiaries to display" />
                            </VBox>
                        </placeholder>
                    </TableView>

                    <!-- Table Status Bar -->
                    <HBox alignment="CENTER_RIGHT" spacing="8" styleClass="table-status-bar">
                        <padding>
                            <Insets bottom="6" left="12" right="12" top="6" />
                        </padding>
                        <Label styleClass="status-text" text="Showing" />
                        <Label fx:id="showingCountLabel" styleClass="status-value" text="0" />
                        <Label styleClass="status-text" text="of" />
                        <Label fx:id="totalCountLabel" styleClass="status-value" text="0" />
                        <Label styleClass="status-text" text="beneficiaries" />
                    </HBox>
                </VBox>

                <!-- Allocation Summary -->
                <HBox spacing="16" styleClass="summary-box">
                    <padding>
                        <Insets bottom="12" left="16" right="16" top="12" />
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="20" styleClass="success-icon" />
                        <VBox spacing="2">
                            <Label styleClass="summary-title" text="Allocation Summary" />
                            <HBox spacing="16">
                                <HBox alignment="CENTER_LEFT" spacing="6">
                                    <Label styleClass="summary-label" text="Assigned:" />
                                    <Label fx:id="assignedCountLabel" styleClass="summary-value-assigned" text="0" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="6">
                                    <Label styleClass="summary-label" text="Unassigned:" />
                                    <Label fx:id="unassignedCountLabel" styleClass="summary-value-unassigned" text="0" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="6">
                                    <Label styleClass="summary-label" text="Nearby:" />
                                    <Label fx:id="nearbyCountLabel" styleClass="summary-value-nearby" text="0" />
                                </HBox>
                            </HBox>
                        </VBox>
                    </HBox>

                    <Button fx:id="refreshBtn" styleClass="btn-icon-only">
                        <graphic>
                            <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="btn-icon" />
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER SECTION ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="dialog-footer">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Region HBox.hgrow="ALWAYS" />
    </HBox>

</VBox>
