<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="750.0" prefWidth="1100.0" spacing="0" styleClass="dialog-root" stylesheets="@/styles/disaster_mapping/dialog/beneficiariesincircledialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster_mapping.dialogs_controller.BeneficiariesInCircleDialogController">

    <!-- ==================== HEADER SECTION ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="USERS" size="22" styleClass="header-icon" />
        <VBox spacing="2">
            <Label fx:id="titleLabel" styleClass="dialog-title" text="Beneficiaries in Disaster Area" />
            <Label styleClass="dialog-subtitle" text="View and manage beneficiaries affected by the disaster" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="closeBtn" styleClass="dialog-close">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="close-icon" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ==================== ERROR CONTAINER ==================== -->
    <VBox alignment="CENTER" managed="false" styleClass="error-box" visible="false">
        <padding>
            <Insets bottom="12" left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>

    <!-- ==================== MAIN CONTENT ==================== -->
    <ScrollPane fitToWidth="true" styleClass="dialog-scroll" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="dialog-body">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION 1: DISASTER INFORMATION ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Disaster Information" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="section-subtitle" text="Affected Area" />
                </HBox>

                <!-- Disaster Info Card -->
                <HBox spacing="16" styleClass="info-box">
                    <FontAwesomeIconView glyphName="FIRE" size="24" styleClass="info-icon" />
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label fx:id="infoLabel" styleClass="info-title" text="Disaster: " />
                        <HBox spacing="16">
                            <HBox alignment="CENTER_LEFT" spacing="6">
                                <FontAwesomeIconView glyphName="MAP_MARKER" size="12" styleClass="field-icon" />
                                <Label styleClass="info-text" text="Circle Radius: 5km" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="6">
                                <FontAwesomeIconView glyphName="CALENDAR" size="12" styleClass="field-icon" />
                                <Label styleClass="info-text" text="Affected: Loading..." />
                            </HBox>
                        </HBox>
                    </VBox>
                    <Label styleClass="badge-active">ACTIVE</Label>
                </HBox>
            </VBox>

            <Separator />

            <!-- ==================== SECTION 2: BENEFICIARIES LIST ==================== -->
            <VBox spacing="18" styleClass="form-section">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-header">
                    <FontAwesomeIconView glyphName="LIST" size="18" styleClass="section-icon" />
                    <Label styleClass="section-title" text="Beneficiaries List" />
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="12">
                        <FontAwesomeIconView glyphName="USERS" size="14" styleClass="field-icon" />
                        <Label fx:id="totalBeneficiariesLabel" styleClass="badge-info" text="Total: 0" />
                    </HBox>
                </HBox>

                <!-- Action Buttons Row -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Button fx:id="designatedSiteBtn" prefHeight="42.0" styleClass="btn-primary" HBox.hgrow="ALWAYS">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="BUILDING" size="14" styleClass="btn-icon" />
                                <Label styleClass="btn-text" text="Designated Site" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="evacuateBtn" prefHeight="42.0" styleClass="btn-secondary" HBox.hgrow="ALWAYS">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="TRUCK" size="14" styleClass="btn-icon" />
                                <Label styleClass="btn-text" text="Evacuate Now" />
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>

                <!-- Table Container -->
                <VBox spacing="12" styleClass="table-container">
                    <!-- Table Toolbar -->
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="table-toolbar">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>

                        <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="field-icon" />
                        <TextField fx:id="searchField" promptText="Search beneficiaries..." styleClass="table-search-field" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Table -->
                    <TableView fx:id="beneficiariesTable" styleClass="custom-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                            <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Beneficiary Name" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="12">
                                <FontAwesomeIconView glyphName="USERS" size="48" styleClass="placeholder-icon" />
                                <Label styleClass="placeholder-text" text="No beneficiaries in this area" />
                            </VBox>
                        </placeholder>
                    </TableView>

                    <!-- Table Status Bar -->
                    <HBox alignment="CENTER_RIGHT" spacing="8" styleClass="table-status-bar">
                        <padding>
                            <Insets bottom="6" left="12" right="12" top="6" />
                        </padding>
                        <Label styleClass="status-text" text="Showing" />
                        <Label fx:id="showingCountLabel" styleClass="status-value" text="0" />
                        <Label styleClass="status-text" text="of" />
                        <Label fx:id="totalCountLabel" styleClass="status-value" text="0" />
                        <Label styleClass="status-text" text="beneficiaries" />
                    </HBox>
                </VBox>

                <!-- Quick Actions Info -->
                <HBox spacing="12" styleClass="info-box">
                    <FontAwesomeIconView glyphName="LIGHTBULB_ALT" size="18" styleClass="info-icon" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="info-title" text="Quick Actions" />
                        <Label styleClass="info-text" text="• Click 'Designated Site' to view the nearest evacuation site for these beneficiaries.&#10;• Click 'Evacuate Now' to allocate beneficiaries to the nearest available evacuation site." wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
