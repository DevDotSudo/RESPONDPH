<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="750.0" prefWidth="1200.0" styleClass="dialog-container"
      stylesheets="@/styles/disaster_mapping/dialog/beneficiariesincircledialog.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ionres.respondph.disaster_mapping.dialogs_controller.EvacuationAllocationDialogController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="dialog-header">
        <FontAwesomeIconView glyphName="HOME" size="24" styleClass="header-icon" />
        <Label fx:id="titleLabel" styleClass="dialog-title" text="Allocate Beneficiaries to Evacuation Sites" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="closeBtn" styleClass="close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="close-icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- Content -->
    <VBox spacing="16" styleClass="content-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="24" left="24" right="24" top="24" />
        </padding>

        <!-- Disaster Info -->
        <HBox spacing="12" styleClass="info-box">
            <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="info-icon"/>
            <Label fx:id="disasterInfoLabel" styleClass="info-label" text="Disaster: "/>
        </HBox>

        <!-- TabPane for Evacuation Sites -->
        <TabPane fx:id="evacuationSitesTabPane" styleClass="evacuation-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <!-- Tabs will be dynamically added here -->
        </TabPane>

        <!-- SMS Method Selection -->
        <VBox spacing="8" styleClass="sms-method-box">
            <Label text="SMS Sending Method:" style="-fx-font-weight: bold;" />
            <HBox spacing="20">
                <RadioButton fx:id="rbGsm" text="GSM Module" />
                <RadioButton fx:id="rbApi" text="Using API" selected="true" />
            </HBox>

            <!-- GSM Port Selection (visible only when GSM is selected) -->
            <HBox fx:id="gsmPortBox" spacing="12" alignment="CENTER_LEFT" managed="false" visible="false">
                <Label text="Select Port:" />
                <ComboBox fx:id="cbGsmPort" prefWidth="150" />
                <Button fx:id="btnRefreshPorts" text="Refresh Ports" />
                <Label fx:id="lblConnectionStatus" text="Disconnected" style="-fx-text-fill: orange;" />
            </HBox>
        </VBox>

        <!-- Progress Section (initially hidden) -->
        <VBox fx:id="progressBox" spacing="8" managed="false" visible="false" styleClass="progress-container">
            <Label fx:id="progressLabel" text="Sending SMS..." style="-fx-font-weight: bold;" />
            <ProgressBar fx:id="progressBar" prefWidth="Infinity" progress="0" />
            <Label fx:id="progressStatusLabel" text="0 / 0 sent" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="action-buttons">
            <Button fx:id="saveAllocationBtn" styleClass="primary-button" prefWidth="200.0">
                <graphic>
                    <HBox alignment="CENTER" spacing="8">
                        <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="button-icon" />
                        <Label styleClass="button-label" text="Save Allocation and Send SMS"/>
                    </HBox>
                </graphic>
            </Button>
            <Button fx:id="cancelBtn" styleClass="secondary-button" prefWidth="100.0">
                <graphic>
                    <HBox alignment="CENTER" spacing="8">
                        <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="button-icon" />
                        <Label styleClass="button-label" text="Cancel"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>
    </VBox>

</VBox>