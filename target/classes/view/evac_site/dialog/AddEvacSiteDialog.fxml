<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="760.0" prefWidth="1100.0" spacing="0" styleClass="evacuation-dialog-container" stylesheets="@/styles/evac_site/dialog/addevacsitedialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.evac_site.dialogs_controller.AddEvacSiteController">

    <!-- ==================== HEADER ==================== -->
    <HBox alignment="CENTER_LEFT" spacing="14" styleClass="evacuation-dialog-header">
        <padding>
            <Insets bottom="18" left="24" right="24" top="18" />
        </padding>

        <FontAwesomeIconView glyphName="HOME" size="22" styleClass="evacuation-header-icon" />
        <VBox spacing="2">
            <Label styleClass="evacuation-dialog-title" text="Add Evacuation Site" />
            <Label styleClass="evacuation-dialog-subtitle" text="Provide evacuation site details and location. Fields marked * are required." />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="exitBtn" styleClass="evacuation-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="14" styleClass="evacuation-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <!-- Error message area -->
    <VBox styleClass="evacuation-error-container">
        <padding>
            <Insets left="24" right="24" top="10" />
        </padding>
        <Label fx:id="errorLabel" managed="false" styleClass="evacuation-error-label" visible="false" />
    </VBox>

    <!-- ==================== BODY ==================== -->
    <ScrollPane fitToWidth="true" styleClass="evacuation-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="evacuation-forms-container">
            <padding>
                <Insets bottom="24" left="24" right="24" top="20" />
            </padding>

            <!-- ==================== SECTION: CENTER INFORMATION ==================== -->
            <VBox spacing="18" styleClass="evacuation-form-section">

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-section-header">
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="18" styleClass="evacuation-section-icon" />
                    <Label styleClass="evacuation-section-title" text="Evacuation Site Information" />
                </HBox>

                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Center Name -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label styleClass="evacuation-field-label" text="Site Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-input-container">
                            <FontAwesomeIconView glyphName="HOME" size="14" styleClass="evacuation-field-icon" />
                            <TextField fx:id="centerNameFld" promptText="Enter center name" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Capacity -->
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label styleClass="evacuation-field-label" text="Capacity *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-input-container">
                            <FontAwesomeIconView glyphName="USERS" size="14" styleClass="evacuation-field-icon" />
                            <TextField fx:id="capacityFld" promptText="Enter maximum capacity" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <Separator />

            <!-- ==================== SECTION: LOCATION INFORMATION ==================== -->
            <VBox spacing="18" styleClass="evacuation-form-section">

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-section-header">
                    <FontAwesomeIconView glyphName="MAP_MARKER" size="18" styleClass="evacuation-section-icon" />
                    <Label styleClass="evacuation-section-title" text="Location Information" />
                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="getLocationBtn" styleClass="evacuation-location-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="LOCATION_ARROW" size="14" styleClass="evacuation-button-icon" />
                                <Label styleClass="evacuation-button-label" text="Get Location" />
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>

                <GridPane hgap="16" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <!-- Latitude -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label styleClass="evacuation-field-label" text="Latitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-input-container">
                            <FontAwesomeIconView glyphName="MAP_PIN" size="14" styleClass="evacuation-field-icon" />
                            <TextField fx:id="latitudeFld" promptText="Enter latitude" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <!-- Longitude -->
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label styleClass="evacuation-field-label" text="Longitude *" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-input-container">
                            <FontAwesomeIconView glyphName="MAP_PIN" size="14" styleClass="evacuation-field-icon" />
                            <TextField fx:id="longitudeFld" promptText="Enter longitude" styleClass="evacuation-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <Separator />

            <!-- ==================== SECTION: NOTES ==================== -->
            <VBox spacing="18" styleClass="evacuation-form-section">

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evacuation-section-header">
                    <FontAwesomeIconView glyphName="STICKY_NOTE" size="18" styleClass="evacuation-section-icon" />
                    <Label styleClass="evacuation-section-title" text="Additional Notes" />
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="evacuation-field-label" text="Notes" />
                    <!-- Wrapper to style TextArea like your textarea card -->
                    <VBox styleClass="evacuation-textarea-container">
                        <TextArea fx:id="notesFld" prefRowCount="4" promptText="Enter notes about this evacuation center..." styleClass="evacuation-text-area" wrapText="true" />
                    </VBox>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- ==================== FOOTER ==================== -->
    <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="evacuation-button-container">
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Button fx:id="saveBtn" styleClass="evacuation-save-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="evacuation-button-icon" />
                    <Label styleClass="evacuation-button-label" text="Save Center" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
