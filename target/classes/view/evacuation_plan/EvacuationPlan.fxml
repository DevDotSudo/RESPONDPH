<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" styleClass="evac-root-pane" stylesheets="@/styles/evac_plan/evacuation_plan.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ionres.respondph.evacuation_plan.EvacuationPlanController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox styleClass="evac-header-section" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="24" left="24" right="24" top="24" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="16">
                <FontAwesomeIconView glyphName="MAP_MARKER" size="24" styleClass="evac-page-icon" />
                <Label styleClass="evac-page-title" text="Evacuation Plans" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="evac-toolbar">
                <VBox.margin>
                    <Insets top="20" />
                </VBox.margin>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="evac-search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="evac-search-icon" />
                    <TextField fx:id="searchField" promptText="Search by beneficiary, site, disaster, date"
                               styleClass="evac-search-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="searchBtn" mnemonicParsing="false" styleClass="evac-primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="evac-button-icon" />
                            <Label styleClass="evac-button-label" text="Search" />
                        </HBox>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="allocateBtn" styleClass="evac-primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="14" styleClass="evac-button-icon" />
                            <Label styleClass="evac-button-label" text="Allocate" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="refreshBtn" styleClass="evac-secondary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="evac-refresh-icon" />
                            <Label styleClass="evac-button-label" text="Refresh" />
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </VBox>

        <VBox styleClass="evac-table-container" VBox.vgrow="ALWAYS">
            <TableView fx:id="planTable" styleClass="evac-plan-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" maxWidth="80" minWidth="80" text="ID" />
                    <TableColumn fx:id="evacSiteColumn" prefWidth="220" text="Evacuation Site" />
                    <TableColumn fx:id="beneficiaryColumn" prefWidth="220" text="Beneficiary Name" />
                    <TableColumn fx:id="disasterColumn" prefWidth="220" text="Disaster Name" />
                    <TableColumn fx:id="dateColumn" prefWidth="160" text="Date" />
                    <TableColumn fx:id="noteColumn" prefWidth="160" text="Note" />
                    <TableColumn fx:id="actionColumn" prefWidth="160" text="Actions" />

                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>