<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root"
      spacing="20"
      styleClass="dialog-root"
      stylesheets="@/styles/evac_plan/dialog/evacuation_plan_dialog.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ionres.respondph.evacuation_plan.dialog_controller.AllocateEvacSiteDialogController">

    <!-- Title -->
    <Label text="Allocate Evacuation Site" styleClass="dialog-title"/>

    <Separator prefWidth="200.0" styleClass="separator"/>

    <!-- Form Section -->
    <GridPane styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="380"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>

        <!-- Disaster Selection -->
        <Label text="Disaster:"
               styleClass="form-label"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>

        <ComboBox fx:id="disasterComboBox"
                  maxWidth="Infinity"
                  promptText="Select disaster..."
                  styleClass="combo-box"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="0"/>
    </GridPane>

    <!-- Button Bar -->
    <HBox styleClass="button-bar">
        <padding>
            <Insets top="10"/>
        </padding>

        <Button fx:id="allocateBtn"
                text="Allocate"
                defaultButton="true"
                styleClass="primary-button"/>

        <Button fx:id="closeBtn"
                text="Close"
                cancelButton="true"
                styleClass="secondary-button"/>
    </HBox>

</VBox>
