<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="600.0" spacing="15.0" styleClass="dialog-container"
      stylesheets="@/styles/evac_plan/evacuation_plan.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ionres.respondph.evacuation_plan.dialog_controller.SendEvacMessageDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label styleClass="dialog-title" text="Send Message to Beneficiaries">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" onAction="#handleClose" styleClass="close-button" text="âœ•">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
    </HBox>

    <Separator/>

    <!-- Evacuation Site Selection -->
    <VBox spacing="8.0">
        <Label styleClass="field-label" text="Select Evacuation Site:">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <ComboBox fx:id="cbEvacSite" maxWidth="1.7976931348623157E308" promptText="Choose evacuation site..."
                  styleClass="custom-combo-box"/>
        <Label fx:id="lblBeneficiaryCount" styleClass="info-label" text="Beneficiaries: 0">
            <font>
                <Font size="11.0"/>
            </font>
        </Label>
    </VBox>

    <!-- Disaster Selection -->
    <VBox spacing="8.0">
        <Label styleClass="field-label" text="Select Disaster:">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <ComboBox fx:id="cbDisaster" maxWidth="1.7976931348623157E308" promptText="Choose disaster..."
                  styleClass="custom-combo-box"/>
    </VBox>

    <!-- Message Input -->
    <VBox spacing="8.0" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="field-label" text="Message:">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblCharCount" styleClass="char-count" text="0/160 characters">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
        </HBox>
        <TextArea fx:id="txtMessage" prefHeight="150.0" promptText="Enter your message here..."
                  styleClass="custom-text-area" wrapText="true" VBox.vgrow="ALWAYS"/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <CheckBox fx:id="chkAppendSiteName" selected="true" text="Append evacuation site name to message"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnPreview" onAction="#handlePreview" styleClass="secondary-button" text="Preview"/>
        </HBox>
    </VBox>

    <!-- Send Method Selection -->
    <VBox spacing="8.0">
        <Label styleClass="field-label" text="Send Method:">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <HBox spacing="15.0">
            <RadioButton fx:id="rbGsm" styleClass="custom-radio" text="Using GSM Module">
                <font>
                    <Font size="13.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="rbApi" selected="true" styleClass="custom-radio" text="Using API">
                <font>
                    <Font size="13.0"/>
                </font>
            </RadioButton>
        </HBox>

        <!-- GSM Port Selection (visible only when GSM is selected) -->
        <HBox fx:id="gsmPortBox" alignment="CENTER_LEFT" managed="false" spacing="10.0" visible="false">
            <Label text="GSM Port:">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <ComboBox fx:id="cbGsmPort" prefWidth="200.0" promptText="Select port..."/>
            <Button fx:id="btnRefreshPorts" onAction="#handleRefreshPorts" text="Refresh"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblConnectionStatus" styleClass="status-label" text="Disconnected"/>
        </HBox>
    </VBox>

    <Separator/>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnCancel" cancelButton="true" onAction="#handleCancel" styleClass="secondary-button"
                text="Cancel">
            <font>
                <Font size="13.0"/>
            </font>
        </Button>
        <Button fx:id="btnSend" defaultButton="true" onAction="#handleSend" styleClass="primary-button" text="Send Message">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>
    </HBox>
</VBox>