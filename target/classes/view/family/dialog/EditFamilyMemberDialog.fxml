<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="700.0" prefWidth="1000.0" styleClass="edit-family-dialog-container" stylesheets="@/styles/family/dialog/editfamilymemberdialog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.familymembers.dialogs_controller.EditFamilyController">

    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-dialog-header">
        <FontAwesomeIconView glyphName="EDIT" size="24" styleClass="edit-family-header-icon" />
        <Label styleClass="edit-family-dialog-title" text="Edit Family Member" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="exitBtn" styleClass="edit-family-close-button">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="16" styleClass="edit-family-close-icon" />
            </graphic>
        </Button>
    </HBox>

    <VBox alignment="CENTER" styleClass="edit-family-error-container">
        <Label fx:id="errorLabel" managed="false" styleClass="edit-family-error-label" visible="false" />
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="edit-family-form-scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="24" styleClass="edit-family-forms-container">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <VBox spacing="20" styleClass="edit-family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-section-header">
                    <FontAwesomeIconView glyphName="USERS" size="20" styleClass="edit-family-section-icon" />
                    <Label styleClass="edit-family-section-title" text="Family Member Information" />
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <!-- First Name -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="First Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-family-field-icon" />
                            <TextField fx:id="firstNameFld" promptText="Enter first name" styleClass="edit-family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Middle Name" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-family-field-icon" />
                            <TextField fx:id="middleNameFld" promptText="Enter middle name" styleClass="edit-family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Last Name *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="USER" size="16" styleClass="edit-family-field-icon" />
                            <TextField fx:id="lastNameFld" promptText="Enter last name" styleClass="edit-family-input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <!-- Birthdate -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Birthdate *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="CALENDAR" size="16" styleClass="edit-family-field-icon" />
                            <DatePicker fx:id="birthDatePicker" styleClass="edit-family-date-picker" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Gender *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="VENUS_MARS" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="genderSelection" promptText="Select gender" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Marital Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEART" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="maritalStatusSelection" promptText="Select marital status" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="edit-family-field-label" text="Relationship to Beneficiary *" />
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                        <FontAwesomeIconView glyphName="HEART" size="16" styleClass="edit-family-field-icon" />
                        <ComboBox fx:id="relationshipSelection" promptText="Select relationship to beneficiary" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-section-header">
                    <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="20" styleClass="edit-family-section-icon" />
                    <Label styleClass="edit-family-section-title" text="Vulnerability Indicators" />
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Disability Type *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="WHEELCHAIR" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="disabilityTypeSelection" promptText="Select disability type" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Health Condition *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="HEARTBEAT" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="healthConditionSelection" promptText="Select health condition" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-section-header">
                    <FontAwesomeIconView glyphName="LINE_CHART" size="20" styleClass="edit-family-section-icon" />
                    <Label styleClass="edit-family-section-title" text="Education and Employment" />
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Employment Status *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="BRIEFCASE" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="employmentStatusSelection" promptText="Select employment status" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="edit-family-field-label" text="Education Level *" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-input-container" HBox.hgrow="ALWAYS">
                            <FontAwesomeIconView glyphName="GRADUATION_CAP" size="16" styleClass="edit-family-field-icon" />
                            <ComboBox fx:id="educationLevelSelection" promptText="Select education level" styleClass="edit-family-dropdown" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="20" styleClass="edit-family-form-section">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="edit-family-section-header">
                    <FontAwesomeIconView glyphName="STICKY_NOTE" size="20" styleClass="edit-family-section-icon" />
                    <Label styleClass="edit-family-section-title" text="Additional Information" />
                </HBox>

                <VBox spacing="8">
                    <Label styleClass="edit-family-field-label" text="Notes *" />
                    <TextArea fx:id="notesFld" promptText="Enter notes about this family member" styleClass="edit-family-text-area" />
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="edit-family-button-container">
        <padding>
            <Insets bottom="32" left="32" right="32" top="24" />
        </padding>
        <Button fx:id="updateBtn" styleClass="edit-family-update-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SAVE" size="16" styleClass="edit-family-button-icon" />
                    <Label styleClass="edit-family-button-label" text="Update Family Member" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

</VBox>
