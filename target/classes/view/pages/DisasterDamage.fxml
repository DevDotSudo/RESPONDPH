<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" styleClass="root-pane" stylesheets="@/styles/pages/disaster_damage.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.disaster_damage.DisasterDamageController">

    <VBox spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox spacing="0" styleClass="header-section">
            <padding>
                <Insets bottom="24" left="24" right="24" top="24" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="16">
                <FontAwesomeIconView glyphName="FIRE" size="24" styleClass="page-icon" />
                <Label styleClass="page-title" text="Manage Disaster Damage" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="toolbar">
                <VBox.margin>
                    <Insets top="20" />
                </VBox.margin>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-box">
                    <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="search-icon" />
                    <TextField fx:id="searchField" promptText="Search disaster" styleClass="search-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="searchBtn" mnemonicParsing="false" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Search" />
                        </HBox>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addBtn" styleClass="primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="14" styleClass="button-icon" />
                            <Label styleClass="button-label" text="Add Damage" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="refreshBtn" styleClass="secondary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="refresh-icon" />
                            <Label styleClass="button-label" text="Refresh" />
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="24" left="24" right="24" top="18" />
            </padding>

            <TableView fx:id="disastersDamageTbl" styleClass="damage-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="damage_id" maxWidth="80" minWidth="80" text="ID" />
                    <TableColumn fx:id="beneficiaryNameColumn" prefWidth="1" text="Beneficiary Name" />
                    <TableColumn fx:id="disasterColumn" prefWidth="1" text="Disaster Name" />
                    <TableColumn fx:id="damageSeverityColumn" prefWidth="1" text="Damage Severity" />
                    <TableColumn fx:id="assessmentDateColumn" prefWidth="1" text="Assessment Date" />
                    <TableColumn fx:id="verifiedByColumn" prefWidth="1" text="Verified By" />
                    <TableColumn fx:id="registeredDateColumn" prefWidth="1" text="Registered Date" />
                    <TableColumn fx:id="actionsColumn" maxWidth="120" minWidth="120" text="Actions" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>