<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="824.0" prefWidth="321.0" styleClass="dashboard-root" stylesheets="@/styles/pages/mainframe.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ionres.respondph.main.MainFrameController">
    <left>
        <VBox spacing="0" styleClass="sidebar">
            <VBox alignment="CENTER" prefHeight="120.0" styleClass="logo-section">
                <ImageView fitHeight="60.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/respondph_logo.png" />
                </ImageView>
                <HBox alignment="CENTER" spacing="2" styleClass="brand-container">
                    <Label styleClass="sidebar-brand-name" text="RESPOND" />
                    <Label styleClass="sidebar-brand-highlight" text="PH" />
                </HBox>
            </VBox>

            <VBox styleClass="nav-menu" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="HOME" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Dashboard" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="manageAdminBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="USER" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Manage Admins" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="manageBeneficiariesBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="USERS" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Manage Beneficiaries" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="familyMembersBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="USER_PLUS" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Family Members" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="disasterBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="EXCLAMATION_TRIANGLE" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Disaster" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="disasterDamageBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="FIRE" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Disaster Damage" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="aidsBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="MEDKIT" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Aids" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="sendSmsBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="PAPER_PLANE" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Send SMS" />
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="settingsBtn" maxWidth="1.7976931348623157E308" styleClass="nav-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="GEAR" size="18" styleClass="nav-icon" />
                            <Label styleClass="nav-text" text="Settings" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="logout-section">
                <Button fx:id="logoutBtn" maxWidth="1.7976931348623157E308" styleClass="logout-button">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="16">
                            <FontAwesomeIconView glyphName="SIGN_OUT" size="16" styleClass="logout-icon" />
                            <Label styleClass="logout-text" text="Logout" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" styleClass="content-area" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
        </VBox>
    </center>
</BorderPane>
